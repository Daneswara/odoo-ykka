<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="template_report_transaction_usage"> 
			<t t-call="ka_stock_account.report_transaction_document"/>
		</template>
		
		<template id="report_transaction_document"> 
			<t t-call="report.html_container">
				<div class="header" style="margin:0px 10px 0px 5px; padding-bottom:0px;">
					<div class="container" position="fixed" style="font-family: Dotrice; font-size:14px;">
						<div class="row">
							<div class="col-xs-4" style="padding:0px;">
								<p class="text-left">
									PT. KEBON AGUNG<br/>
									<span t-esc="user.company_id.name"/><br/>
									<span t-esc="user.company_id.city" style="text-transform: uppercase;"/><br/>
								</p>
							</div>
							<div class="col-xs-4" style="padding:0px;"></div>
							<div class="col-xs-2" style="padding:0px;">
<!--							<p class="text-right"><span t-esc="time.strftime('%d-%m-%Y')"/></p-->
							</div>
							<div class="col-xs-2" style="padding:0px;">
							<p class="text-right"><span t-esc="time.strftime('%d-%m-%Y')"/></p>
							</div>
						</div>
						
						<div class="row">
							<div class="col-xs-4" style="padding:0px;"></div>
							<div class="col-xs-4" style="padding:0px;">
								<p class="text-center">TRANSAKSI PEMAKAIAN</p>
							</div>
							<div class="col-xs-2" style="padding:0px;"></div>
							<div class="col-xs-2" style="padding:0px;">
								<p class="text-right">
									Hal. <span class="page"/>
								</p>
							</div>
						</div>
					</div>
				</div>
					
				<div class="page">
					<div class="row">
						<div class="col-xs-12" style="font-family: Dotrice; font-size:13px; padding-top:30px;">
							<table width="100%" style="margin-top:0px;table-layout:fixed;">
								<thead style="@media print {thead div {display: table-header-group;}};">
									<tr min-height="30px" style="border-top:1px dashed #000; border-bottom:1px dashed #000; padding: 20px;">
										<th width="5%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">No.</th>
										<th width="10%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Bukti</th>
										<th width="15%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Kd.Barang</th>
										<th width="25%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Nama Barang / Uraian</th>
										<th width="18%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Kuantum/ Satuan</th>
										<th width="15%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Unit Mesin</th>
										<th width="12%" style="padding: 3px 5px; vertical-align:middle;" class="text-center">Perkiraan</th>
									</tr>
								</thead>
								
								<tbody> 
									<t t-foreach="docs" t-as="o">
										<t t-set="no" t-value="1"/>
										<t t-set="amount_all_po" t-value="0"/>
	                    					<tr min-height="15px"> 
	                    						<td colspan="8" class="text-right" style="padding: 3px 5px;"><br/></td> 
	                    					</tr>
	                    					<tr min-height="15px">
	                    						<td></td> 
	                    						<td colspan="6" style="padding: 3px 5px;">No.BATCH : <span t-field="o.origin"/></td>
	                    					</tr>
	                    					<tr min-height="15px"> 
	                    						<td></td>
	                    						<td colspan="6" style="padding: 3px 5px;">TGL.TRANSAKSI : <span t-field="o.date_transfer" t-field-options="{'format': 'dd-MM-yyyy'}"/> </td>
	                    					</tr>
	                    					<tr min-height="15px"> 
	                    						<td colspan="7" class="text-right" style="padding: 3px 5px;"><br/></td> 
	                    					</tr>
	                    					
	                    					<t t-set="no" t-value="1"/>
	                    					<t t-set="total_qty" t-value="0"/>
	                    					<t t-foreach="o.move_lines" t-as="line">
	                    						<tr min-height="15px"> 
	                    							<td style="text-align: center;padding: 5px;"><span t-esc="no"/>.</td> 
	                    							<td style="text-align: center;padding: 5px;"><span t-field="line.no_bukti_pengeluaran"/></td>
	                    							<td style="text-align: center;padding: 5px;"><span t-field="line.product_id.default_code"/></td> 
	                    							<td style="text-align: left;padding: 5px;"><span t-field="line.product_id.name"/></td>
	                    							<td style="text-align: center;padding: 5px;"><span t-field="line.product_uom_qty"/> <span t-field="line.product_uom"/></td>
	                    							<td style="text-align: center;padding: 5px;"><span t-field="line.account_analytic_id.name"/></td>
	                    							<td style="text-align: center;padding: 5px;"><span t-field="line.account_id.code"/></td>
		                    						
	                    						</tr>
	                    						<t t-set="no" t-value="no+1"/>
	                    						<t t-set="total_qty" t-value="total_qty+line.product_uom_qty"/>
	                    					</t>
	                    					
	                    					<tr min-height="15px">
	                    						<td colspan="3" style="text-align: right;padding: 5px;"><span t-field="o.total_product_code_manual"/></td> 
	                    						<td style="text-align: left;padding: 5px;">*** Total Batch ***</td> 
	                    						<td style="text-align: center;padding: 5px;"><span t-esc="total_qty"/></td> 
	                    						<td colspan="2" style="text-align: center;padding: 5px;"></td> 
	                    					</tr>	
                    				</t>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</t>
		</template>
	</data>
</odoo>