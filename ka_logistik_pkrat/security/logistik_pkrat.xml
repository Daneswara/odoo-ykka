<odoo>
	<data>
		<record model="ir.module.category" id="logistik_pkrat_category">
			<field name="name">LOG6 - PKRAT/Kontrak</field>
			<field name="description">Pemeliharaan File PKRAT</field>
		</record>

		<record model="res.groups" id="ka_logistik_pkrat.group_user">
			<field name="name">User</field>
			<field name="category_id" ref="logistik_pkrat_category"/>
		</record>

		<record model="res.groups" id="ka_logistik_pkrat.group_manager">
			<field name="name">Manager</field>
			<field name="category_id" ref="logistik_pkrat_category"/>
			<field name="implied_ids" eval="[(4, ref('ka_logistik_pkrat.group_user'))]"/>
		</record>
	</data>


	<data>
		<record id="logistik_pkrat_comp_rule" model="ir.rule">
			<field name="name" >PKRAT multi-company</field>
			<field name="model_id" ref="model_logistik_pkrat"/>
			<field name="global" eval="True"/>
			<field name="domain_force"> ['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False), ('stasiun_id','child_of', [s.id for s in user.stasiun_ids])]</field>
		</record>
	</data>	
</odoo>
