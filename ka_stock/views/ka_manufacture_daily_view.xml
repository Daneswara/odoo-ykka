<odoo>
	<data>
		<record id="view_stock_manufacture_daily_form_inherit" model="ir.ui.view">
            <field name="name">ka_manufacture.daily.form</field>
            <field name="model">ka_manufacture.daily</field>
            <field name="inherit_id" ref="ka_manufacture.view_manufacture_daily_form"/>
            <field name="arch" type="xml">
            	<field name="qty_packer" position="after">
            		<field name="qty_sugar"/>
            		<field name="qty_sugar_retail"/>
<!--            		<field name="qty_sugar_premium"/> -->
	                <field name="qty_molasses"/> 
	                <field name="qty_bagasse"/> 
            	</field>
            	<xpath expr="//form/sheet/group[1]" position="after">
            		<notebook string="Produksi">
                        <page string="Produksi Gula Karung">
                            <field name="sugar_production_ids" readonly="True">
                           		<tree string="Sugar Production Line">
				                    <field name="name"/>
					                <field name="date"/>  
					                <field name="product_id"/>
					                <field name="product_uom"/>
					                <field name="total_production_qty" sum="Total Produksi Gula"/>
					               	<field name="company_id" groups="base.group_multi_company"/>
					                <field name="state"/>    
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Produksi Gula Retail">
                            <field name="sugar_retail_production_ids" readonly="True">
                           		<tree string="Sugar Retail Production Line">
				                    <field name="name"/>
				                    <field name="date"/>  
				                    <field name="product_id"/>
				                    <field name="product_uom"/>
				                    <field name="product_qty" sum="Total Produksi Gula Retail"/>
				                   	<field name="company_id" groups="base.group_multi_company"/>
				                    <field name="state"/>  
                                </tree>
                            </field>
                        </page>
                        
                        <!--
                          <page string="Produksi Gula Premium">
                            <field name="sugarpremium_production_ids" readonly="True">
                           		<tree string="Sugar Premium Production Line">
				                    <field name="name"/>
				                    <field name="date"/>  
				                    <field name="product_id"/>
				                    <field name="product_uom"/>
				                    <field name="product_qty"/>
				                   	<field name="company_id" groups="base.group_multi_company"/>
				                    <field name="state"/>  
                                </tree>
                            </field>
                        </page>
                        -->
                        
                       	<page string="Produksi Tetes">
                            <field name="molasses_production_ids" readonly="True">
                           		<tree string="Molasses Production Line">
				                    <field name="name"/>
				                    <field name="date"/>  
				                    <field name="product_id"/>
				                    <field name="product_uom"/>
				                    <field name="total_qty" sum="Total Produksi Tetes"/>
				                   	<field name="company_id" groups="base.group_multi_company"/>
				                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        
                       	<page string="Produksi Ampas">
                            <field name="bagasse_production_ids" readonly="True">
                           		<tree string="Bagasse Production Line">
                           			<field name="name" readonly="1"/>                   
				                    <field name="date"/>  
				                    <field name="product_id"/>
				                    <field name="product_uom"/>
				                    <field name="product_qty"/>
				                    <field name="company_id" groups="base.group_multi_company"/>
				                    <field name="state"/> 
                                </tree>
                            </field>
                        </page>
                	</notebook>
                </xpath>
            </field>
        </record>
	</data>
</odoo>