<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_area_taksasi">
			<field name="name">Form Area Taksasi</field>
			<field name="model">ka_plantation.area.taksasi</field>
			<field name="arch" type="xml">
				<form string="Form Area Taksasi">
					<sheet>
						<group>
							<field name="register_id"/>
							<field name="periode_id"/>
							<field name="taksasi"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area_taksasi">
			<field name="name">Data Area Taksasi</field>
			<field name="model">ka_plantation.area.taksasi</field>
			<field name="arch" type="xml">
				<tree>
					<field name="register_id"/>
					<field name="periode_id"/>
					<field name="taksasi"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_taksasi">
			<field name="name">Area Taksasi</field>
			<field name="res_model">ka_plantation.area.taksasi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data area taksasi masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>