<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_mtt">
			<field name="name">Form MTT</field>
			<field name="model">ka_plantation.mtt</field>
			<field name="arch" type="xml">
				<form string="Form MTT">
					<sheet>
						<group>
							<field name="name"/>
							<field name="session_id"/>
							<field name="luas"/>
							<field name="taks_produksi"/>
							<field name="count_register"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_mtt">
			<field name="name">Data MTT</field>
			<field name="model">ka_plantation.mtt</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="session_id"/>
					<field name="count_register"/>
					<button name="open_register" type="object" string="Data Register"/>
					<field name="luas"/>
					<field name="taks_produksi"/>
					<button name="open_register_lines" type="object" string="Daftar Petak"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_mtt">
			<field name="name">Register TR Berdasarkan MTT</field>
			<field name="res_model">ka_plantation.mtt</field>
			<field name="view_id" ref="view_tree_mtt"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'default_register_type':'tr'}</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data MTT masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_tree_mtt_ts">
			<field name="name">Data MTT</field>
			<field name="model">ka_plantation.mtt</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="session_id"/>
					<field name="count_register"/>
					<button name="open_register_ts" type="object" string="Data Register"/>
					<field name="luas"/>
					<field name="taks_produksi"/>
					<button name="open_register_lines" type="object" string="Daftar Petak"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_mtt_ts">
			<field name="name">Register TS Berdasarkan MTT</field>
			<field name="res_model">ka_plantation.mtt</field>
			<field name="view_id" ref="view_tree_mtt_ts"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'default_register_type':'ts'}</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data MTT masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>