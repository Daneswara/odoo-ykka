<odoo>
	<data>
		<record model="ir.ui.view" id="area_agronomi_search_view">
            <field name="name">ka_plantation.area.agronomi.search</field>
            <field name="model">ka_plantation.area.agronomi</field>
            <field name="arch" type="xml">
                <search>
					<field name="area_id"/>
					<field name="desa_id"/>
					<field name="kecamatan_id"/>
					<field name="kabupaten_id"/>
					<field name="varietas_id"/>
					<field name="intensifikasi_id"/>
					<field name="mtt_id"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="agronomi_pivot_view">
            <field name="name">Pivot Agronomi</field>
            <field name="model">ka_plantation.area.agronomi</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Register" type="pivot">
                    <field name="kecamatan_id" type="row"/>
                    <field name="intensifikasi_id" type="col"/>
                    <field name="taks_produksi" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="view_tree_area_agronomi">
			<field name="name">Data Area Lahan Kebun</field>
			<field name="model">ka_plantation.area.agronomi</field>
			<field name="arch" type="xml">
				<tree>
					<field name="area_id"/>
					<field name="desa_id"/>
					<field name="kecamatan_id"/>
					<field name="kabupaten_id"/>
					<field name="varietas_id"/>
					<field name="intensifikasi_id"/>
					<field name="luas" sum="Total Luas"/>
					<field name="taks_produksi" sum="Total Taksasi"/>
					<field name="mtt_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_form_area_agronomi">
			<field name="name">Form Inventarisasi Lahan Kebun</field>
			<field name="model">ka_plantation.area.agronomi</field>
			<field name="arch" type="xml">
				<form string="Form Area Lahan Kebun">
					<sheet>
						<div class="oe_title" style="float:left;">
	                        <h2>
	                            Data Inventarisasi Lahan
	                        </h2>
	                    </div>
	                    <group>
	                    	<group>
								<field name="mtt_id"/>
								<field name="session"/>
								<field name="area_id"/>
								<field name="luas"/>
								<field name="desa_id"/>
								<field name="kecamatan_id"/>
								<field name="kabupaten_id"/>
								<field name="varietas_id"/>
								<field name="intensifikasi_id"/>
								<field name="taks_produksi"/>
								<field name="tebang_periode_id"/>
								<field name="tanam_periode_id"/>
							</group>
	                    </group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_agronomi">
			<field name="name">Inventarisasi Lahan Kebun</field>
			<field name="res_model">ka_plantation.area.agronomi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,pivot</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data invetarisasi lahan kebun masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>