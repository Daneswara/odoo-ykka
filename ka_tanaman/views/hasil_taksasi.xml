<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_hasil_taksasi">
            <field name="name">Hasil Taksasi</field>
            <field name="model">ka_plantation.register.line</field>
			<field name="arch" type="xml">
				<form string="Data Petak ter-Register">
					<sheet>
						<group>
							<group>
								<field name="register_id"/>
								<field name="mtt_id"/>
								<field name="area_id"/>
								<field name="luas"/>
								<field name="produktivitas"/>
								<field name="taks_produksi"/>
								<field name="varietas_id"/>
								<field name="intensifikasi_id"/>
							</group>
							<group>
								<field name="tanam_periode_id"/>
								<field name="tebang_periode_id"/>
								<field name="tergiling_ku"/>
								<field name="sisa_ku"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_hasil_taksasi">
            <field name="name">Hasil Taksasi</field>
            <field name="model">ka_plantation.register.line</field>
			<field name="arch" type="xml">
				<tree>
					<field name="register_id"/>
					<field name="mtt_id"/>
					<field name="area_id"/>
					<field name="desa_id"/>
					<field name="kecamatan_id"/>
					<field name="luas" sum="Total Luas"/>
					<field name="produktivitas" sum="Total Produktivitas"/>
					<field name="taks_produksi" sum="Total Taks. Produksi"/>
					<field name="varietas_id"/>
					<field name="intensifikasi_id"/>
					<field name="tanam_periode_id"/>
					<field name="tebang_periode_id"/>
					<field name="tergiling_ku" sum="Total Tergiling"/>
					<field name="sisa_ku" sum="Total Sisa"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="hasil_taksasi_pivot_view">
            <field name="name">Pivot Hasil Taksasi</field>
            <field name="model">ka_plantation.register.line</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Register" type="pivot">
                    <field name="kecamatan_id" type="row"/>
                    <field name="intensifikasi_id" type="col"/>
                    <field name="taks_produksi" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.ui.view" id="hasil_taksasi_search_view">
            <field name="name">ka_plantation.register.line.search</field>
            <field name="model">ka_plantation.register.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="register_id"/>
					<field name="mtt_id"/>
					<field name="area_id"/>
					<field name="luas"/>
					<field name="taks_produksi"/>
					<field name="varietas_id"/>
					<field name="intensifikasi_id"/>
                </search>
            </field>
        </record>

		<record model="ir.actions.act_window" id="action_hasil_taksasi">
            <field name="name">Hasil Taksasi</field>
            <field name="res_model">ka_plantation.register.line</field>
            <field name="domain">[('register_id.state', '=', 'approve')]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Data Petak Register masih Kosong. Buat Register terlebih dahulu.
                </p>
            </field>
        </record>
	</data>
</odoo>