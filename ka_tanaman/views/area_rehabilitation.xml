<odoo>
	<data>
		<record model="ir.ui.view" id="rehabilitation_search_view">
            <field name="name">ka_plantation.area.rehabilitasi.search</field>
            <field name="model">ka_plantation.area.rehabilitation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="date_delivery"/>
					<field name="area_id"/>
					<field name="farmer_name"/>
					<field name="kecamatan_id"/>
					<field name="rehabilitation_type"/>
					<field name="desa_id"/>
					<field name="kecamatan_id"/>
					<field name="kabupaten_id"/>
                </search>
            </field>
        </record>

		<record model="ir.ui.view" id="tree_area_rehabilitation">
			<field name="name">Tree Area Rehabilitation</field>
			<field name="model">ka_plantation.area.rehabilitation</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Area Rehabilitation">
					<field name="date_delivery"/>
					<field name="area_id"/>
					<field name="farmer_name"/>
					<field name="rehabilitation_type"/>
					<field name="quantity"/>
					<field name="rit"/>
					<field name="biaya"/>
					<field name="area_type"/>
					<field name="desa_id"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="rehabilitation_pivot_view">
            <field name="name">ka_plantation.area.rehabilitation.pivot</field>
            <field name="model">ka_plantation.area.rehabilitation</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Kebun Rehabilitasi" type="pivot">
                    <field name="kecamatan_id" type="row"/>
                    <field name="quantity" type="measure"/>
                </pivot>
            </field>
        </record>

		<record model="ir.ui.view" id="form_area_rehabilitation">
			<field name="name">Form Area Rehabilitation</field>
			<field name="model">ka_plantation.area.rehabilitation</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Area Rehabilitation">
					<header>
						<field name="geo_ok" invisible="1"/>
						<button name="action_draft" type="object"
                                string="Reset to draft" states="valid"/>
						<button name="action_valid" type="object" 
								string="Validasi" class="oe_highlight" states="draft"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<div class="oe_title" style="float:left;">
	                        <h2>
	                            REHABILITASI LAHAN
	                        </h2>
	                    </div>
						<group>
							<group>
								<field name="company_id" groups="base.group_multi_company"/>
								<field name="date_delivery"/>
								<field name="area_id"/>
								<field name="luas"/>
								<field name="desa_id"/>
								<field name="kecamatan_id"/>
								<field name="zona_id"/>
								<!-- <field name="kabupaten_id"/> -->
								<field name="area_type" invisible="1"/>
								<label for="latitude" string="Latitute(Dec)"/>
								<div>
									<field name="latitude" class="oe_inline"/> Long : 
									<field name="longitude" class="oe_inline"/>
								</div>
							</group>
							<group>
								<!-- <field name="geo_photo" widget="image"/> -->
								<field name="farmer_name"/>
								<field name="plpg_name"/>
								<field name="rehabilitation_type"/>
								<field name="quantity"/>
								<field name="rit"/>
								<field name="tarif"/>
								<field name="biaya"/>
							</group>	
						</group>
					</sheet>
					<div class="oe_chatter">
                   	 	<field name="message_follower_ids" widget="mail_followers"/>
                    	<field name="message_ids" widget="mail_thread"/>
                	</div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_custom_arearehab_area_rehabilitation">
			<field name="name">Data Map Area Rehabilitation</field>
			<field name="model">ka_plantation.area.rehabilitation</field>
			<field name="arch" type="xml">
				<arearehab string="Area Maps">
					<field name="area_id"/>
					<field name="latitude"/>
					<field name="longitude"/>
				</arearehab>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_rehabilitation_tr">
			<field name="name">Rehabilitasi Kebun TR</field>
			<field name="res_model">ka_plantation.area.rehabilitation</field>
			<field name="view_type">form</field>
			<field name="domain">[('area_type', '=', 'tr')]</field>
			<field name="context">{'default_area_type':'tr'}</field>
			<field name="view_mode">tree,form,arearehab,pivot</field>
		</record>
		<record model="ir.actions.act_window" id="action_area_rehabilitation_ts">
			<field name="name">Rehabilitasi Kebun TS</field>
			<field name="res_model">ka_plantation.area.rehabilitation</field>
			<field name="view_type">form</field>
			<field name="domain">[('area_type', '=', 'ts')]</field>
			<field name="context">{'default_area_type':'ts'}</field>
			<field name="view_mode">tree,form,arearehab,pivot</field>
		</record>
		<record model="ir.actions.act_window" id="action_area_rehabilitation">
			<field name="name">Rehabilitasi Kebun</field>
			<field name="res_model">ka_plantation.area.rehabilitation</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,arearehab,pivot</field>
		</record>
	</data>
</odoo>