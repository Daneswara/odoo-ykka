<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_area_sampling_taksasi">
			<field name="name">Form Area Sampling</field>
			<field name="model">ka_plantation.sampling.taksasi</field>
			<field name="arch" type="xml">
				<form string="Form Area Lahan Kebun">
					<sheet>
						<group>
							<group>
								<field name="mtt_id"/>
								<field name="jumlah"/>
								<field name="bobot"/>
								<field name="tinggi"/>
								<field name="faktor"/>
								<field name="luas_contoh"/>
							</group>
							<group>
								<field name="bobot_juring"/>
								<field name="bobot_juring"/>
								<field name="produktivitas"/>
								<field name="company_id"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area_sampling_taksasi">
			<field name="name">Data Area Sampling</field>
			<field name="model">ka_plantation.sampling.taksasi</field>
			<field name="arch" type="xml">
				<tree>
					<field name="mtt_id"/>
					<field name="kecamatan_id"/>
					<field name="jumlah_petak"/>
					<field name="luas_petak"/>
					<field name="company_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_sampling_taksasi">
			<field name="name">Area Sampling</field>
			<field name="res_model">ka_plantation.sampling.taksasi</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data lahan kebun masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>