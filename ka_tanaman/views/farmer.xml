<odoo>
	<data>
        <record id="action_show_tree_petak" model="ir.actions.act_window">
            <field name="name">Petak</field>
            <field name="res_model">ka_plantation.area</field>
            <field name="view_type">form</field>
            <field name="view_mode">areamap</field>
            <field name="view_id" ref="view_tree_area"/>
        </record>

		<record id="view_farmer_tree" model="ir.ui.view">
            <field name="name">ka_plantation.farmer.tree</field>
            <field name="model">ka_plantation.farmer</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Contacts">
                    <field name="code" string="No. Induk" required="1"/>
                    <field name="register" invisible="1"/>
                    <!-- <field name="kud_id"/> -->
                    <field name="name" string="Nama"/>
                    <field name="function" invisible="1"/>
                    <field name="street" string="Alamat"/>
                    <field name="city" string="Kota"/>
                    <field name="phone" string="No. Telepon"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="country_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_farmer_form" model="ir.ui.view">
            <field name="name">ka_plantation.farmer.form</field>
            <field name="model">ka_plantation.farmer</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Farmers">
                    <sheet>
                        <div class="oe_button_box" style="width:550px" name="button_box">
                            <button class="oe_stat_button" name="open_register_readonly" type="object" icon="fa-th-list">
                                <field name="register_count" string="Data Register" widget="statinfo"/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                        <div class="oe_title">
                            <field name="is_company" invisible="1"/>
                            <field name="commercial_partner_id" invisible="1"/>
                            <field name="company_type" invisible="1"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                            </h1>
                            <div class="o_row">
                                <field name="parent_id"
                                    placeholder="Company"
                                    domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
                                    invisible="1"/>
                                <field name="company_name" 
                                    attrs="{'invisible': ['|', '|',('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                                <button name="create_company" type="object" string="Create company" 
                                    class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link " 
                                    attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
                            </div>
                        </div>
                        <notebook colspan="4">
                        	<page string="Informasi Umum">
                        		<group>
                                    <group>
                                        <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>
                                        <field name="code" string="No. Induk"/>
                                        <field name="register" invisible="1"/>
                                        <!-- <field name="kud_id"/> -->
                                        <field name="no_ktp"/>
                                        <label for="street" string="Alamat"/>
                                        <div class="o_address_format">
                                            <div class="oe_edit_only">
                                                <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                                    attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                            </div>
                                            <field name="street" placeholder="Jalan..." class="o_address_street"
                                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                            <field name="street2" placeholder="Jalan 2..." class="o_address_street"
                                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                            <field name="city" placeholder="Kota" class="o_address_city"
                                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" invisible="1"/>
                                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'
                                                invisible="1" context="{'country_id': country_id, 'zip': zip}"/>
                                            <field name="zip" placeholder="Kode Pos" class="o_address_zip"
                                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                            <field name="country_id" placeholder="Negara" class="o_address_country" options='{"no_open": True, "no_create": True}'
                                                invisible="1"/>
                                        </div>
                                        <field name="desa_id"/>
                                        <field name="kecamatan_id"/>
                                        <field name="kabupaten_id"/>
                                    </group>
                                    <group>
                                        <field name="phone" widget="phone" string="No. Telp"/>
                                        <field name="mobile" widget="phone" string="No. HP"/>
                                        <field name="user_ids" invisible="1"/>
                                        <field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])]}"/>
                                        <field name="category_id" widget="many2many_tags" placeholder="Tags..." options="{'no_create_edit': True}"/>
    									<field name="company_id" groups="base.group_multi_company"/>
                                    </group>
                                </group>
                        	</page>
    <!--                         <page string="Akunting" name="accounting" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}">
                                 <group>
                                     <group string="Akunting">
                                        <field name="code" string="Kode"/>
                                        <field name="property_account_receivable_id"/>
                                        <field name="property_account_payable_id"/>
                                    </group>
                                    <group string="Pembayaran" name="banks">
                                        <field name="currency_id" invisible="1"/>
                                        <div>
                                            <button type="action" class="btn-link"
                                                name="%(base.action_res_partner_bank_account_form)d"
                                                context="{'search_default_partner_id': partner_id, 'default_partner_id': partner_id}">
                                                <field string="Bank account(s)" name="bank_account_count" widget="statinfo"/>
                                            </button>
                                        </div>
                                    </group>
                                </group>
                            </page>
     -->                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

       <record id="view_res_farmer_filter" model="ir.ui.view">
            <field name="name">ka_plantation.farmer.select</field>
            <field name="model">ka_plantation.farmer</field>
            <field name="arch" type="xml">
                <search string="Pencarian Petani">
                   <field name="code" string="No. Induk"/>
                   <field name="name"
                       filter_domain="[('name','ilike',self)]"/>
               </search>
            </field>
        </record>

        <!-- Partner Kanban View -->
        <record model="ir.ui.view" id="res_farmer_kanban_view">
            <field name="name">ka_plantation.farmer.kanban</field>
            <field name="model">ka_plantation.farmer</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="email"/>
                    <field name="code"/>
                    <field name="register"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="category_id"/>
                    <field name="image_small"/>
                    <field name="type"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                <div class="o_kanban_image">
                                    <t t-if="record.image_small.raw_value">
                                        <img t-att-src="kanban_image('ka_plantation.farmer', 'image_small', record.id.value)"/>
                                    </t>
                                    <t t-if="!record.image_small.raw_value">
                                        <t t-if="record.type.raw_value === 'delivery'">
                                            <img t-att-src='_s + "/base/static/src/img/truck.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                        </t>
                                        <t t-if="record.type.raw_value === 'invoice'">
                                            <img t-att-src='_s + "/base/static/src/img/money.png"' class="o_kanban_image oe_kanban_avatar_smallbox"/>
                                         </t>
                                        <t t-if="record.type.raw_value != 'invoice' &amp;&amp; record.type.raw_value != 'delivery'">
                                            <t t-if="record.is_company.raw_value === true">
                                                <img t-att-src='_s + "/base/static/src/img/company_image.png"'/>
                                            </t>
                                            <t t-if="record.is_company.raw_value === false">
                                                <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                            </t>
                                        </t>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading"><field name="display_name"/></strong>
                                    <ul>
                                        <li t-if="record.code.raw_value" class="o_text_overflow"><field name="code"/> / <field name="register"/></li>
                                        <li t-if="record.phone.raw_value" class="o_text_overflow"><field name="phone"/></li>
                                        <li t-if="record.mobile.raw_value" class="o_text_overflow"><field name="mobile"/></li>
                                        <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                    </ul>
                                    <div class="oe_kanban_partner_links"/>
                                </div>
                            </div>

                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
