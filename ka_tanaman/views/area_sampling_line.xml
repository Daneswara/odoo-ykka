<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_area_sampling_line">
			<field name="name">Form Area Sampling</field>
			<field name="model">ka_plantation.sampling.line</field>
			<field name="arch" type="xml">
				<form string="Form Area Lahan Kebun">
					<sheet>
						<group>
							<group>
								<field name="mtt_id"/>
								<field name="kecamatan_id"/>
								<field name="jumlah_petak"/>
								<field name="luas_petak"/>
								<field name="company_id"/>
							</group>
							<group>
								<field name="jumlah_sampling"/>
								<field name="jumlah_intensifikasi"/>
								<field name="jumlah_varietas"/>
							</group>
						</group>
						<notebook>
							<page String="Data Taksasi" autofocus="autofocus">
								<!-- <field name="sampling_taksasi_ids" context="{'default_sampling_line_id' : active_id, 'default_kecamatan_id': kecamatan_id}"> -->
								<field name="sampling_taksasi_ids">
									<tree editable="1" create="0">
										<field name="area_id"/>
										<field name="jumlah"/>
										<field name="bobot"/>
										<field name="tinggi"/>
										<field name="faktor"/>
										<field name="luas_contoh"/>
										<field name="bobot_juring"/>
										<field name="bobot_petak"/>
										<field name="produktivitas_petak"/>
									</tree>
									<form editable="0">
										<group>
											<group>
												<field name="kecamatan_id"/>
												<field name="area_id"/>
												<field name="mtt_id"/>
												<field name="jumlah"/>
												<field name="bobot"/>
												<field name="tinggi"/>
												<field name="faktor"/>
												<field name="luas_contoh"/>
											</group>
											<group>
												<field name="bobot_juring"/>
												<field name="bobot_petak"/>
												<!-- <field name="produktivitas_juring"/> -->
												<field name="produktivitas_petak"/>
												<field name="company_id"/>
											</group>
										</group>
									</form>
								</field>
							</page>
							<page String="Kombinasi">
								<field name="kombinasi_ids">
									<tree editable="0" create="0">
										<field name="intensifikasi_id"/>
										<field name="varietas_id"/>
										<field name="produktivitas"/>
									</tree>
									<form editable="0">
										<group>
											<field name="kecamatan_id"/>
											<field name="intensifikasi_id"/>
											<field name="varietas_id"/>
											<field name="produktivitas"/>
										</group>
									</form>
								</field>
							</page>
						</notebook>
						<group>	
							<group class="oe_subtotal_footer oe_right">
								<field name="rata_produktivitas"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area_sampling_line">
			<field name="name">Data Area Sampling</field>
			<field name="model">ka_plantation.sampling.line</field>
			<field name="arch" type="xml">
				<tree>
					<field name="mtt_id"/>
					<field name="kecamatan_id"/>
					<field name="jumlah_petak"/>
					<field name="luas_petak"/>
					<field name="company_id"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_sampling_line">
			<field name="name">Area Sampling</field>
			<field name="res_model">ka_plantation.sampling.line</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data lahan kebun masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>