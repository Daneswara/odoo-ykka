<odoo>
	<data>
		<record id="action_show_credit_jaminan" model="ir.actions.act_window">
            <field name="name">Jaminan Kredit</field>
            <field name="res_model">ka_plantation.credit.jaminan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_show_credit_farmer" model="ir.actions.act_window">
            <field name="name">Data Petani</field>
            <field name="res_model">ka_plantation.credit.farmer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_tree_credit_petani"/>
        </record>
        <record id="action_show_credit_kud_petak" model="ir.actions.act_window">
            <field name="name">Lahan Petak</field>
            <field name="res_model">ka_plantation.area</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,areamap</field>
            <field name="view_id" ref="view_tree_area"/>
        </record>
		<record model="ir.ui.view" id="view_form_kredit_kud">
			<field name="name">Form Kredit KUD</field>
			<field name="model">ka_plantation.credit.kud</field>
			<field name="arch" type="xml">
				<form string="Form Kredit KUD">
					<header>
                        <button name="action_draft" type="object"
                                string="Reset to draft"
                                states="validate,approve"/>
                        <button name="action_validate" type="object"
                                string="Validate" states="draft"
                                class="oe_highlight"/>
                        <button name="action_approve" type="object"
                                string="Approve" states="validate"
                                class="oe_highlight"/>
                        <button name="action_paid" type="object"
                                string="Paid" states="approve"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
					<sheet>
						<div class="oe_title" style="float:left;">
	                        <h1>
	                            PAKET KREDIT PROGRAM (KUD)
	                        </h1>
	                    </div>
						<div class="oe_button_box" style="width:550px;" name="button_box">
	                        <button class="oe_stat_button" type="object" name="_compute_luas" string="Cetak" icon="fa-print">
	                        </button>
	                        <button class="oe_stat_button" type="object" name="open_list_jaminan" icon="fa-credit-card">
	                            <field string="Jaminan" name="bunga" widget="statinfo"/>
	                        </button> 
	                        <button class="oe_stat_button" type="object" name="open_list_farmer" icon="fa-users">
	                            <field string="Kelompok Tani" name="count_farmer" widget="statinfo"/>
	                        </button>     
	                        <button class="oe_stat_button" type="object" name="open_list_petak" icon="fa-map-o">
                            	<field string="Jumlah Petak" name="count_petak" widget="statinfo"/>
                        	</button>
	                    </div>
						<group>
							<group>
								<field name="mtt_id"/>
								<field name="session"/>
								<field name="tanggal"/>
								<field name="name"/>
								<field name="kud_id"/>
								<field name="ketua_kud"/>
								<label for="street" string="Alamat"/>
	                            <div class="o_address_format">
	                                <field name="street" placeholder="Alamat..." class="o_address_street"/>
	                            </div>
							</group>
							<group>
								<field name="register_id"/>
								<field name="luas_petak"/>
	                            <field name="taks_produksi"/>
								<field name="harga_ngp"/>
								<field name="bunga" string="Bunga (%)"/>
	                            <field name="total_credit"/>
								<field name="company_id" readonly="1" groups="base.group_multi_company" string="Unit/PG"/>
							</group>
						</group>
					</sheet>
					<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_credit_kud">
			<field name="name">Data Credit KUD</field>
			<field name="model">ka_plantation.credit.kud</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="tanggal"/>
					<field name="kud_id"/>
					<field name="ketua_kud"/>
					<field name="taks_produksi"/>
					<field name="total_credit"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_credit_kud">
			<field name="name">Data Kredit KUD</field>
			<field name="res_model">ka_plantation.credit.kud</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data Kredit KUD masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>