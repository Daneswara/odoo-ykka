<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_ts_category">
			<field name="name">Form Kategori Tebu Sendiri</field>
			<field name="model">ka_plantation.ts.category</field>
			<field name="arch" type="xml">
				<form string="Form Kategori Tebu Sendiri">
					<sheet>
						<group>
							<field name="code" style="width:35%"/>
							<field name="name"/>
						</group>
						<notebook>
							<page string="Data Biaya">
								<field name="cost_ids" nolabel="1" readonly="1">
									<tree>
										<field name="code"/>
										<field name="name"/>
										<field name="category_id"/>
										<field name="property_account_id"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_ts_category">
			<field name="name">Data Kategori Tebu Sendiri</field>
			<field name="model">ka_plantation.ts.category</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code"/>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_ts_category">
			<field name="name">Kategori Area</field>
			<field name="res_model">ka_plantation.ts.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data Kategori Area masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>