<odoo>
	<data>
		<record model="ir.ui.view" id="view_form_area_taksasi_periode">
			<field name="name">Form Area Taksasi Periode</field>
			<field name="model">ka_plantation.area.taksasi.periode</field>
			<field name="arch" type="xml">
				<form string="Form Area Taksasi Periode">
					<sheet>
						<group>
							<field name="code"/>
							<field name="name"/>
							<field name="bulan"/>
							<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area_taksasi_periode">
			<field name="name">Data Area Taksasi Periode</field>
			<field name="model">ka_plantation.area.taksasi.periode</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code"/>
					<field name="name"/>
					<field name="bulan"/>
					<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_area_taksasi_periode">
			<field name="name">Area Taksasi Periode</field>
			<field name="res_model">ka_plantation.area.taksasi.periode</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data area taksasi periode masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>