<odoo>
    <data>

      <record model="ir.ui.view" id="view_form_varietas">
      <field name="name">Form Varietas</field>
      <field name="model">ka_plantation.varietas</field>
      <field name="arch" type="xml">
        <form string="Form Varietas">
          <sheet>
            <group>
              <field name="code"/>
              <field name="name"/>
              <field name="masak_category"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_tree_varietas">
      <field name="name">Data Varietas</field>
      <field name="model">ka_plantation.varietas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="name"/>
          <field name="masak_category"/>
        </tree>
      </field>
    </record>

        <record model="ir.actions.act_window" id="action_varietas">
            <field name="name">Varietas</field>
            <field name="res_model">ka_plantation.varietas</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Data Varietas masih kosong. Input terlebih dahulu.
                </p>
            </field>
        </record>
    </data>
</odoo>