<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<template id="layout_header_internal">
			<div class="header" style="padding-bottom: 5px; border-bottom: 2px solid black">
				<img src="ka_report_layout/static/src/img/icon-kebonagung.png" style="position: absolute; height: 45px"/>

				<t t-if="doc.company_id.code != '1'">
					<div class="row text-center">
						<img src="ka_report_layout/static/src/img/logo-ptkebonagung.png" style="margin: 0 auto; height: 20px"/>
					</div>
					<div class="row text-center">
						<img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % doc.company_id.logo" style="margin: 3px auto 0 auto; height: 30px"/>
					</div>
				</t>
				<t t-else="">
					<div class="row text-center">
						<img t-if="doc.company_id.logo" t-att-src="'data:image/png;base64,%s' % doc.company_id.logo" style="margin: 3px auto 0 auto; height: 50px"/>
					</div>
				</t>

				<div class="row text-center" name="doc.company_id_address" style="font-size: 14px">
					<span t-field="doc.company_id.street"/>. Telp: <span t-field="doc.company_id.phone"/>. Fax: <span t-field="doc.company_id.fax"/>. <span t-field="doc.company_id.city"/>. <span t-field="doc.company_id.zip"/>
				</div>

				<div class="row zero_min_height" style="margin-top: 10px">
					<div class="col-xs-12">
						<div style="border-bottom: 1px solid black;"/>
					</div>
				</div>
			</div>
		</template>
	</data>
</odoo>