<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<record id="template_mail_cuti_approved" model="mail.template">
			<field name="name">Pemberitahuan Cuti Disetujui Mail Template</field>
			<field name="email_from">${object.company_id.email or ''}</field>
			<field name="subject">Pemberitahuan Cuti Disetujui</field>
			<field name="email_to">${object.employee_id.work_email}</field>
			<field name="email_cc"/>
			<field name="model_id" ref="ka_hr_holidays.model_hr_holidays"/>
			<field name="auto_delete" eval="False"/>
			<field name="lang"/>
			<field name="copyvalue"/>
			<field name="body_html">
<![CDATA[
<p>
	Yth. ${object.employee_id.name}
</p>
<p>
	Berikut ini kami informasikan bahwa pengajuan cuti anda:
	<br/>
	Jenis Cuti: ${object.holiday_status_id.code} - ${object.holiday_status_id.name}
	<br/>
	Jumlah: ${object.number_of_days_temp} hari
	<br/>
	<strong>Telah disetujui.</strong>
</p>
<br/>
<p>
	Terima Kasih.
	<br/>
	${object.company_id.name}
</p>
]]>
			</field>
		</record>
	</data>
</odoo>