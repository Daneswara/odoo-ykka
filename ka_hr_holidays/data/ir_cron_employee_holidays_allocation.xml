<odoo>
	<data noupdate="1">
		<record model="ir.cron" id="cron_employee_holidays_allocation">
			<field name="name">Periodic Employee Holidays Allocation</field>
			<field name="active" eval="True"/>
			<field name="user_id" ref="base.user_root"/>
			<field name="priority">1</field>
			<field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:01:00')"/>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="model" eval="'hr.holidays'"/>
			<field name="function" eval="'check_employee_holidays_allocation'"/>
			<field name="args" eval="'()'"/>
		</record>
	</data>
</odoo>