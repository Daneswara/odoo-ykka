<odoo>
	<data>
		<record model="ir.ui.view" id="wizard_config_form">
			<field name="name">SDM - Setting Cuti</field>
			<field name="model">ka_hr.holidays.config.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="SDM - Setting Cuti">
					<group>
						<field name="company_id" groups="base.group_multi_company"/>
						<field name="hr_holidays_yearly_item"/>
						<label for="hr_holidays_yearly_periodic" string="Periode Cuti Tahunan"/>
						<div>
							<field name="hr_holidays_yearly_periodic" class="oe_inline"/> tahun
						</div>
						<label for="hr_holidays_max_sisa_yearly" string="Max. Sisa Cuti Tahunan"/>
						<div>
							<field name="hr_holidays_max_sisa_yearly" class="oe_inline"/> hari
						</div>
						<field name="hr_holidays_big_item"/>
						<label for="hr_holidays_big_periodic" string="Periode Cuti Besar"/>
						<div>
							<field name="hr_holidays_big_periodic" class="oe_inline"/> tahun
						</div>
						<label for="hr_holidays_max_sisa_big" string="Max. Sisa Cuti Besar"/>
						<div>
							<field name="hr_holidays_max_sisa_big" class="oe_inline"/> hari
						</div>
						<field name="hr_holidays_inhaldagen_item"/>
						<label for="hr_holidays_inhaldagen_expire" string="Jumlah Kadaluwarsa Inhaldagen"/>
						<div>
							<field name="hr_holidays_inhaldagen_expire" class="oe_inline"/> hari
						</div>
						<field name="hr_holidays_group_item"/>
					</group>
					<footer>
						<button name="save_data" string="Simpan Data" type="object" class="btn-primary"/>
						<button string="Batal" class="btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<act_window
			id="action_wizard_config"
			name="Setting Cuti"
			res_model="ka_hr.holidays.config.wizard"
			view_mode="form"
			target="new"/>

		<menuitem action="action_wizard_config" id="menu_wizard_config" parent="hr_holidays.menu_hr_holidays_configuration" sequence="3"/>
	</data>
</odoo>