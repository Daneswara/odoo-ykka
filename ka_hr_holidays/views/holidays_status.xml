<odoo>
	<data>
		<record model="ir.ui.view" id="hr_holidays_status_tree">
			<field name="name">Kategori Absensi Tree</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id" ref="hr_holidays.view_holiday_status_tree"/>
			<field name="arch" type="xml">
				<field name="max_leaves" position="replace"/>
				<field name="leaves_taken" position="replace"/>
				<field name="remaining_leaves" position="replace"/>

				<field name="name" position="before">
					<field name="code"/>
				</field>

				<field name="name" position="after">
					<field name="leave_type"/>
					<field name="jumlah"/>
					<field name="satuan"/>
					<field name="holiday_type"/>
					<field name="is_daily_type"/>
					<!-- <field name="is_need_parent"/> -->
					<field name="is_potong_gaji"/>
					<field name="double_validation"/>
					<field name="limit"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_holidays_status_form">
			<field name="name">Kategori Absensi Form</field>
			<field name="model">hr.holidays.status</field>
			<field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
			<field name="arch" type="xml">
				<xpath expr="//group[@name='selection']" position="replace">
					<group>
						<field name="code"/>
						<field name="name" string="Nama Absensi"/>
						<field name="leave_type"/>
						<field name="jumlah"/>
						<field name="satuan"/>
					</group>
				</xpath>

				<xpath expr="//group[@name='second']" position="replace">
					<group>
						<field name="holiday_type"/>
						<field name="is_daily_type"/>
						<!-- <field name="is_need_parent"/> -->
						<field name="is_potong_gaji"/>
						<field name="double_validation"/>
						<field name="limit"/>
						<field name="company_id" groups="base.group_multi_company"/>
						<field name="color_name"/>
						<field name="active"/>
					</group>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="hr_holidays_status_search">
			<field name="name">Kategori Absensi Search</field>
			<field name="model">hr.holidays.status</field>
			<field name="arch" type="xml">
				<search>
					<field name="code"/>
					<field name="name"/>
					<filter name="leave_type_cuti" string="Jenis Cuti" domain="[('leave_type', '=', 'cuti')]"/>
					<filter name="leave_type_ijin" string="Jenis Ijin" domain="[('leave_type', '=', 'ijin')]"/>
					<filter name="leave_type_dinas" string="Jenis Dinas" domain="[('leave_type', '=', 'dinas')]"/>
					<filter name="leave_type_sakit" string="Jenis Sakit" domain="[('leave_type', '=', 'sakit')]"/>
					<filter name="leave_type_mangkir" string="Jenis Mangkir" domain="[('leave_type', '=', 'mangkir')]"/>
					<separator/>
					<filter name="holiday_type_add" string="Absensi Add" domain="[('holiday_type', '=', 'add')]"/>
					<filter name="holiday_type_remove" string="Absensi Remove" domain="[('holiday_type', '=', 'remove')]"/>
					<separator/>
					<filter name="is_potong_false" string="Dengan Potong Gaji" domain="[('is_potong_gaji', '=', True)]"/>
					<filter name="is_potong_true" string="Tanpa Potong Gaji" domain="[('is_potong_gaji', '=', False)]"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_hr_holidays_status">
			<field name="name">Kategori Absensi</field>
			<field name="res_model">hr.holidays.status</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="hr_holidays_status_search"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input data kategori absensi.</p>
			</field>
		</record>

		<!-- <record model="ir.actions.act_window.view" id="action_hr_holidays_status_tree">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="hr_holidays_status_tree"/>
			<field name="act_window_id" ref="action_hr_holidays_status"/>
		</record>

		<record model="ir.actions.act_window.view" id="action_hr_holidays_status_form">
			<field name="view_mode">form</field>
			<field name="view_id" ref="hr_holidays_status_form"/>
			<field name="act_window_id" ref="action_hr_holidays_status"/>
		</record> -->


		<menuitem action="action_hr_holidays_status" id="menu_ka_hr_holiday_status" parent="hr_holidays.menu_hr_holidays_configuration" sequence="3" />
	</data>
</odoo>