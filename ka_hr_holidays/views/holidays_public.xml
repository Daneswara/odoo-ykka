<odoo>
	<data>
		<record model="ir.ui.view" id="ka_hr_holidays_public_tree">
			<field name="name">SDM Hari Libur Bersama Tree</field>
			<field name="model">ka_hr.holidays.public</field>
			<field name="arch" type="xml">
				<tree string="Hari Libur Nasional">
					<field name="name"/>
					<field name="tgl_holiday"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="ka_hr_holidays_public_form">
			<field name="name">SDM Hari Libur Bersama Form</field>
			<field name="model">ka_hr.holidays.public</field>
			<field name="arch" type="xml">
				<form string="Hari Libur Nasional">
					<sheet>
						<group>
							<field name="name"/>
							<field name="tgl_holiday"/>
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="ka_hr_holidays_public_search">
			<field name="name">SDM Hari Libur Bersama Search</field>
			<field name="model">ka_hr.holidays.public</field>
			<field name="arch" type="xml">
				<search>
					<field name="tgl_holiday"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_ka_hr_holidays_public">
			<field name="name">Data Hari Libur Bersama</field>
			<field name="res_model">ka_hr.holidays.public</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input data hari libur nasional.</p>
			</field>
		</record>

		<menuitem action="action_ka_hr_holidays_public" id="menu_ka_hr_holidays_public" parent="hr_holidays.menu_hr_holidays_configuration" sequence="1" />
	</data>
</odoo>