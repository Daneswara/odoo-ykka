<odoo>
	<data>
		<record model="ir.ui.view" id="view_holidays_afkoop_tree">
			<field name="name">ka_hr.holidays.afkoop.tree</field>
			<field name="model">ka_hr.holidays.afkoop</field>
			<field name="arch" type="xml">
				<tree string="SDM Afkoop Cuti Besar Tree">
					<field name="employee_id"/>
					<field name="jumlah"/>
					<field name="state"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_holidays_afkoop_form">
			<field name="name">ka_hr.holidays.afkoop.form</field>
			<field name="model">ka_hr.holidays.afkoop</field>
			<field name="arch" type="xml">
				<form string="SDM Afkoop Cuti Besar Form">
					<header>
						<button name="action_draft" type="object" string="Reset ke draft" states="proposed,canceled" groups="hr_holidays.group_hr_holidays_user"/>
						<button name="action_propose" type="object" string="Ajukan" states="draft" groups="hr_holidays.group_hr_holidays_user" class="oe_highlight"/>
						<button name="action_approve" type="object" string="Setujui" states="proposed" groups="hr_holidays.group_hr_holidays_user" class="oe_highlight" confirm="Peringatan! Setelah disetujui tidak bisa dibatalkan!"/>
						<button name="action_refuse" type="object" string="Tolak" states="proposed" groups="hr_holidays.group_hr_holidays_user"/>
						<button name="action_cancel" type="object" string="Batalkan" states="draft,proposed" groups="hr_holidays.group_hr_holidays_user"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<field name="employee_id"/>
							<field name="jumlah"/>
							<field name="parent_holiday"/>
							<field name="sisa_cuti"/>
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_holidays_afkoop_search">
			<field name="name">ka_hr.holidays.afkoop.search</field>
			<field name="model">ka_hr.holidays.afkoop</field>
			<field name="arch" type="xml">
				<search>
					<field name="employee_id"/>
					<field name="jumlah"/>
					<field name="state"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_view_holidays_afkoop">
			<field name="name">Afkoop Cuti Besar</field>
			<field name="res_model">ka_hr.holidays.afkoop</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context" eval="{}"/>
			<field name="domain">[('user_id', '=', uid)]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Buat afkoop cuti besar.</p>
			</field>
		</record>

		<menuitem action="action_view_holidays_afkoop" id="menu_view_holidays_afkoop" parent="hr_holidays.menu_hr_holidays_my_leaves" sequence="8"/>

		<record model="ir.actions.act_window" id="action_view_holidays_afkoop_approve">
			<field name="name">Afkoop Cuti Besar</field>
			<field name="res_model">ka_hr.holidays.afkoop</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('state', '=', 'proposed')]</field>
		</record>

		<menuitem action="action_view_holidays_afkoop_approve" id="menu_view_holidays_afkoop_approve" parent="hr_holidays.menu_hr_holidays_approvals" groups="hr_holidays.group_hr_holidays_manager,hr_holidays.group_hr_holidays_user" sequence="8"/>
	</data>
</odoo>