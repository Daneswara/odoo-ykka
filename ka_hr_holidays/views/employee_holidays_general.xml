	<data>
		<record model="ir.ui.view" id="view_hr_holidays_kompensasi_hutang_lines_form">
			<field name="name">hr.holidays.kompensasi.hutang.lines.form</field>
			<field name="model">hr.holidays.kompensasi.hutang.lines</field>
			<field name="arch" type="xml">
				<form>
					<field name="kompensasi_reference_id" invisible="1"/>
					<group>
						<field name="hutang_reference_id"/>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_hr_holidays_lines_form">
			<field name="name">hr.holidays.lines.form</field>
			<field name="model">hr.holidays.lines</field>
			<field name="arch" type="xml">
				<form>
					<field name="leave_type" invisible="1"/>
					<group>
						<group>
							<field name="holiday_id" attrs="{'invisible': [('leave_type', '!=', 'cuti')]}"/>
							<field name="holiday_date"/>
							<field name="cuti_reference_id" attrs="{'invisible': [('leave_type', '!=', 'cuti')]}"/>
						</group>
						<group>
							<field name="is_hutang" attrs="{'invisible': [('leave_type', '!=', 'cuti')]}"/>
							<field name="kompensasi_reference_id" attrs="{'invisible': [('leave_type', '!=', 'cuti')]}"/>
							<field name="is_inhaldagen" attrs="{'invisible': [('leave_type', '!=', 'dinas')]}"/>
							<field name="inhaldagen_reference_id" attrs="{'invisible': [('leave_type', '!=', 'dinas')]}"/>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_hr_holidays_general_form">
			<field name="name">hr.holidays.general.form</field>
			<field name="model">hr.holidays</field>
			<field name="arch" type="xml">
				<form>
					<field name="can_reset" invisible="1"/>
					<field name="type" invisible="1"/>
					<field name="holiday_status_help" invisible="1"/>
					<field name="holiday_status_leave_type" invisible="1"/>
					<field name="is_inhaldagen" invisible="1"/>
					<field name="count_kompensasi" invisible="1"/>
					<header>
						<button string="Confirm" name="action_confirm" states="draft" type="object" class="oe_highlight"/>
						<button string="Approve" name="action_approve" states="confirm" type="object" groups="hr_holidays.group_hr_holidays_user" class="oe_highlight"/>
						<button string="Validate" name="action_validate" states="validate1" type="object" groups="hr_holidays.group_hr_holidays_manager" class="oe_highlight"/>
						<button string="Refuse" name="action_refuse" states="confirm,validate,validate1" type="object" groups="hr_holidays.group_hr_holidays_user"/>
						<button string="Reset to Draft" name="action_draft" type="object" attrs="{'invisible': ['|', ('can_reset', '=', False), ('state', 'not in', ['confirm', 'refuse'])]}"/>
						<button class="btn-primary" type="action" name="%(report_ka_hr_employee_holidays)d" string="Cetak Pengajuan Cuti" attrs="{'invisible': ['|', ('type', '=', 'add'), ('holiday_status_leave_type', '!=', 'cuti')]}"/>
						<button class="btn-primary" type="action" name="%(report_ka_employee_dinas)d" string="Cetak Surat Tugas" attrs="{'invisible': ['|', ('type', '=', 'add'), ('holiday_status_help', '!=', 'dinas')]}"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h1><field name="display_name"/></h1>
						</div>

						<group>
							<group>
								<field name="employee_id"/>
								<field name="holiday_status_id" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('type', '=', 'flush')]}" domain="[('leave_type', '=', holiday_status_help), ('holiday_type', '=', type)]"/>
								<field name="holiday_status_daily_type" attrs="{'invisible': [('type', '!=', 'remove')]}"/>
								<label for="number_of_days_temp" string="Duration"/>
								<div>
									<div attrs="{'invisible': [('type', '!=', 'remove')]}">
										<field name="date_from" attrs="{'required': [('type', '=', 'remove')]}" class="oe_inline"/> -
										<field name="date_to" attrs="{'required': [('type', '=', 'remove')]}" class="oe_inline"/>
									</div>
									<div>
										<field name="number_of_days_temp" class="oe_inline"/> hari
									</div>
								</div>
								<field name="is_active" attrs="{'invisible': [('type', '!=', 'add')]}"/>
								<field name="date_start" attrs="{'invisible': [('type', '!=', 'add')]}"/>
								<field name="date_exp" attrs="{'invisible': [('type', '!=', 'add')]}"/>
							</group>
							<group>
								<field name="name" required="1"/>
								<field name="holiday_address" attrs="{'invisible': [('type', '!=', 'remove')], 'required': [('type', '=', 'remove')]}"/>
								<field name="flush_reference_id" attrs="{'invisible': [('type', '!=', 'flush')]}"/>
								<field name="dinas_reference_id" attrs="{'invisible': [('is_inhaldagen', '=', False)]}"/>
								<field name="department_id"/>
								<field name="company_id"/>
							</group>

							<notebook colspan="4">
								<page string="Detail Cuti" attrs="{'invisible': ['|', ('holiday_status_help', '!=', 'cuti'), ('type', '!=', 'remove')]}">
									<field name="cuti_line_ids">
										<tree create="false" edit="false" delete="false">
											<field name="holiday_date"/>
											<field name="cuti_reference_id"/>
											<field name="is_hutang"/>
											<field name="kompensasi_reference_id"/>
										</tree>
									</field>
								</page>
								<page string="Detail Surat Tugas" attrs="{'invisible': ['|', ('holiday_status_help', '!=', 'dinas'), ('type', '!=', 'remove')]}">
									<field name="dinas_line_ids">
										<tree create="false" edit="false" delete="false">
											<field name="holiday_date"/>
											<field name="is_inhaldagen"/>
											<field name="inhaldagen_reference_id"/>
										</tree>
									</field>
								</page>
								<page string="Detail Absensi" attrs="{'invisible': ['|', ('holiday_status_help', 'in', ['cuti', 'dinas']), ('type', '!=', 'remove')]}">
									<field name="absensi_line_ids">
										<tree create="false" edit="false" delete="false">
											<field name="holiday_date"/>
										</tree>
									</field>
								</page>
								<page string="Detail Kompensasi Hutang" attrs="{'invisible': ['|', ('type', '!=', 'flush'), ('count_kompensasi', '&lt;=', 0)]}">
									<field name="kompensasi_hutang_line_ids">
										<tree create="false" edit="false" delete="false">
											<field name="hutang_reference_id"/>
										</tree>
									</field>
								</page>
								<page string="Detail Pengambilan Cuti" attrs="{'invisible': [('type', '!=', 'add')]}">
									<field name="remove_line_ids">
										<tree create="false" edit="false" delete="false">
											<field name="holiday_id"/>
											<field name="holiday_date"/>
											<field name="is_hutang"/>
											<field name="kompensasi_reference_id"/>
										</tree>
									</field>
								</page>
							</notebook>

							<field name="notes" nolabel="1" colspan="4" placeholder="Add a reason..." attrs="{'invisible': [('type', '=', 'remove')]}"/>
							<div groups="hr_holidays.group_hr_holidays_manager" attrs="{'invisible':[('type','=','add')]}">
								<separator string="Comment by Manager"/>
								<field name="report_note" placeholder="e.g. Report to the next month..."/>
							</div>
						</group>
					</sheet>

					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
		<!-- end of modify default form in hr_holidays -->

