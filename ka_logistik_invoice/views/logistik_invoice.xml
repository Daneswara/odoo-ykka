		<record model="ir.ui.view" id="logistik_invoice_form">
			<field name="name">logistik.invoice.form</field>
			<field name="model">logistik.invoice</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Logistik Invoice Form">
					<header>
						<button name="action_approved" type="object" string="Pengajuan" states="draft"/>
						<button name="action_draft" type="object" string="Jadikan Draft" states="approved"/>
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<h2>Penerimaan Tagihan Rekanan</h2>
						<hr/>
						<group>
							<group>
								<label for="order_id" string="Nomor dan Tanggal SP"/>
								<div>
									<field name="order_id" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
									<field name="date_order" class="oe_inline" widget="date"/>
								</div>
								<label for="ntb_number" string="Nomor dan Tanggal NTB"/>
								<div>
									<field name="ntb_number" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
									<field name="ntb_date" class="oe_inline" />
								</div>
								<label for="company_id" string="Beban/Tanggal Terima"/>
								<div>
									<field name="company_id"/>
								</div>
							</group>
							<group>
								<field name="name"/>
								<field name="date_submit"/>
								<field name="account_invoice_id" attrs="{'invisible': [('state', '==', 'draft')]}"/>
							</group>
									
							<group>
								<field name="partner_id"/>
								<field name="amount_untaxed"  data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'radixPoint':',', 'autoGroup': true" attrs="{'readonly': [('state', '!=', 'draft')]}" class="field-number-150px span-right"/>
								<field name="amount_tax" data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'radixPoint':',', 'autoGroup': true" attrs="{'readonly': [('state', '!=', 'draft')]}" class="field-number-150px span-right"/>
								<field name="amount_pph" data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'radixPoint':',', 'autoGroup': true" attrs="{'readonly': [('state', '!=', 'draft')]}" class="field-number-150px span-right"/>
								<field name="amount_total" data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'radixPoint':',', 'autoGroup': true" class="field-number-150px span-right"/>
								<label for="term_percent" string="% Pembayaran"/>
								<div>
									<field name="term_percent" data-inputmask="'alias': 'decimal', 'groupSeparator': '.', 'radixPoint':',', 'autoGroup': true" class="oe_inline field-number-50px"/>
									<span class="oe_inline"> %</span>
								</div>
								<label for="invoice_number" string="Nomor/Tanggal Kwitansi"/>
								<div>
									<field name="invoice_number" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/> -
									<field name="date_invoice" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
								</div>
								<label for="tax_number" string="Nomor/Tanggal Faktur Pajak"/>
								<div>
									<field name="tax_number" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
									<field name="tax_date" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
								</div>
							</group>
							<group>
								<field name="invoice_tax_ids" widget="many2many_tags"/>
							</group>
							<group>
								<field name="order_amount" class="field-number-150px span-right"/>
								<field name="total_invoiced" class="field-number-150px span-right"/>
								<field name="invoice_balance" class="field-number-150px span-right"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="logistik_invoice_tree">
			<field name="name">logistik.invoice.tree</field>
			<field name="model">logistik.invoice</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Logistik Invoice Tree">
					<field name="name"/>
					<field name="date_submit"/>
					<field name="partner_id"/>
					<field name="order_id"/>
					<field name="company_id"/>
					<field name="invoice_number"/>
					<field name="tax_number"/>
					<field name="amount_total"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_logistik_invoice">
			<field name="name">Logistik Invoice</field>
			<field name="res_model">logistik.invoice</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data masih kosong, input data terlebih dahulu!</p>
			</field>
		</record>
	</data>
</odoo>