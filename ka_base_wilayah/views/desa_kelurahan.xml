<odoo>
	<data>
		<record model="ir.ui.view" id="desa_search_view">
            <field name="name">res.desa.kelurahan.search</field>
            <field name="model">res.desa.kelurahan</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
					<field name="name"/>
					<field name="kecamatan_id"/>
                </search>
            </field>
        </record>

		<record model="ir.ui.view" id="view_form_desa_kelurahan">
			<field name="name">Form Data Desa/Kelurahan</field>
			<field name="model">res.desa.kelurahan</field>
			<field name="arch" type="xml">
				<form string="Form Desa/Kelurahan">
					<sheet>
						<group>
							<field name="code"/>
							<field name="name"/>
							<label for="Kecamatan_id" string="Nama Kecamatan" />
   							<div>
								<field name="kecamatan_id" class="oe_inline"/>&#x2063;
								<field name="code_urut" class="oe_inline oe_create_only oe_edit_only" nolabel="1" placeholder="Code Desa..."/>
							</div>
							<field name="kab_kota_id"/>
							<field name="provinsi_id"/>
							<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area">
			<field name="name">Data Desa/Kelurahan</field>
			<field name="model">res.desa.kelurahan</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code"/>
					<field name="name"/>
					<field name="kecamatan_id"/>
					<field name="kab_kota_id"/>
					<field name="provinsi_id"/>
					<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_desa_kelurahan">
			<field name="name">Data desa_kelurahan</field>
			<field name="res_model">res.desa.kelurahan</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data Desa/Kelurahan masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>