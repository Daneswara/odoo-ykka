<odoo>
	<data>
		<record model="ir.ui.view" id="dusun_search_view">
            <field name="name">res.dusun.search</field>
            <field name="model">res.dusun</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
					<field name="name"/>
                </search>
            </field>
        </record>

		<record model="ir.ui.view" id="view_form_dusun">
			<field name="name">Form Data Dusun</field>
			<field name="model">res.dusun</field>
			<field name="arch" type="xml">
				<form string="Form Dusun">
					<sheet>
						<group>
							<field name="code"/>
							<field name="name"/>
							<label for="desa_kelurahan_id" string="Nama Desa" />
   							<div>
								<field name="desa_kelurahan_id" class="oe_inline"/>&#x2063;
								<field name="code_urut" class="oe_inline oe_create_only oe_edit_only" nolabel="1" placeholder="Code Dusun..."/>
							</div>
							<field name="kecamatan_id"/>
							<field name="kab_kota_id"/>
							<field name="provinsi_id"/>
							<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_tree_area">
			<field name="name">Data Dusun</field>
			<field name="model">res.dusun</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code"/>
					<field name="name"/>
					<field name="desa_kelurahan_id"/>
					<field name="kecamatan_id"/>
					<field name="kab_kota_id"/>
					<field name="provinsi_id"/>
					<field name="company_id" groups="base.group_multi_company" string="Unit/PG"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_dusun">
			<field name="name">Data Dusun</field>
			<field name="res_model">res.dusun</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data Dusun masih kosong. Input terlebih dahulu.</p>
			</field>
		</record>
	</data>
</odoo>