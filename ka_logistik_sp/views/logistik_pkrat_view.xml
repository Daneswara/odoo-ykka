<odoo>
	<data>
		<record model="ir.actions.act_window" id="action_pkrat_open_sp">
			<field name="name">Surat Pesanan</field>
			<field name="res_model">purchase.order</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('id', '=', context.get('order_id', False))]</field>
		</record>

		<record id="view_logistik_pkrat_sp_form" model="ir.ui.view">
			<field name="name">logistik.pkrat.sp.form</field>
			<field name="model">logistik.pkrat</field>
			<field name="inherit_id" ref="logistik_pkrat.view_logistik_pkrat_form"/>
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/group/group" position="after">
					<group>
						<div class="oe_right">
							<button class="oe_inline oe_stat_button" type="action" icon="fa-strikethrough" name="action_real">
								<field name="total_amount_sp" widget="statinfo"/>
							</button>
							<button class="oe_inline oe_stat_button" type="action" name="action_real">
								<field name="rasio" widget="percentpie"/>
							</button>
						</div>
					</group>
				</xpath>
			
				<xpath expr="/form/sheet/notebook/page[@name='realisasi_fisik']" position="before">
					<page string="Realisasi SP">
						<field name="sp_ids">
							<tree editable="buttom">
								<field name="order_id" string="Nomor SP"/>
								<button name="open_sp" type="object" icon="gtk-find" help="Lihat Surat Pesanan ini"/>
								<field name="date_order" string="Tanggal SP"/>
								<field name="partner_id"/>
								<field name="price_subtotal"/>
								<field name="state"/>
							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
		
		<record id="view_logistik_pkrat_sp_tree" model="ir.ui.view">
			<field name="name">logistik.pkrat.sp.tree</field>
			<field name="model">logistik.pkrat</field>
			<field name="inherit_id" ref="logistik_pkrat.view_logistik_pkrat_tree"/>
			<field name="arch" type="xml">
				<tree position="attributes">
					<attribute name="colors">red:total_amount_sp &gt; nilai</attribute>
				</tree>
				<xpath expr="/tree/field[@name='nilai']" position="after">
					<field name="total_amount_sp"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>