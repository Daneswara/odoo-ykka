<odoo>
    <data>
        <record id="view_manufacture_daily_tree" model="ir.ui.view">
            <field name="name">ka_manufacture.daily.tree</field>
            <field name="model">ka_manufacture.daily</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="session_id"/>
                    <field name="date"/>
                    <field name="in_day"/>  
                   	<field name="company_id"/>
                    <field name="state"/>    
                </tree>
            </field>
        </record>
        
        <record id="view_manufacture_daily_form" model="ir.ui.view">
            <field name="name">ka_manufacture.daily.form</field>
            <field name="model">ka_manufacture.daily</field>
            <field name="arch" type="xml">
                <form>
                	<header>
<!--                        <button name="propose_daily_molasses_transaction" states="draft" type="object" class="oe_highlight" string="Propose"/>-->
<!--                        <button name="set_draft_daily_molasses_transaction" states="proposed" type="object" string="Set to Draft"/>-->
<!--                        <button name="validate_daily_molasses_transaction" states="proposed" type="object" class="oe_highlight" string="Validate"/>                            -->
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>            
                    <sheet>
<!--                    	<div class="oe_button_box" name="button_box">-->
<!--		                    <button name="action_view_picking_molasses" string="Transfers" type="object" class="oe_stat_button" -->
<!--		                    	icon="fa-bars" attrs="{'invisible': [('move_ids','=',[])]}">   -->
<!--		                    </button>-->
<!--		                </div>-->
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                        	<group>
	                    		<field name="session_id" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="date" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="in_day" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="bruto_capacity" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="company_id" attrs="{'readonly': [('state','!=','draft')]}"/>	
	                        	<field name="sugarcane_milled_tr" attrs="{'readonly': [('state','!=','draft')]}"/>
	                        	<field name="sugarcane_milled_ts" attrs="{'readonly': [('state','!=','draft')]}"/> 
	                        	<field name="sugarcane_milled_total" attrs="{'readonly': [('state','!=','draft')]}"/>  
							</group>
							<group>
								<field name="rendement_tr" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="rendement_ts" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="rendement_avg" attrs="{'readonly': [('state','!=','draft')]}"/>	
	                        	<field name="qty_packer" attrs="{'readonly': [('state','!=','draft')]}"/> 
							</group>
	                   	</group>
	              	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
             
     	<record id="action_open_hari_giling" model="ir.actions.act_window">
            <field name="name">Hari Giling</field>
            <field name="res_model">ka_manufacture.daily</field>
            <field name="view_type">form</field> 
            <field name="view_mode">tree,form</field>             
        </record>
        
        <menuitem id="menu_hari_giling" 
        	action="action_open_hari_giling" 
        	parent="ka_manufacture.menu_data_giling"   
        	sequence="5"/>
        
    </data>
</odoo>
