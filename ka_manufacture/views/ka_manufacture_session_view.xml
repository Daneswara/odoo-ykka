<odoo>
    <data>
        <record id="view_manufacture_session_tree" model="ir.ui.view">
            <field name="name">ka_manufacture.session.tree</field>
            <field name="model">ka_manufacture.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="fiscalyear_id"/>
                    <field name="date_start"/>  
                   	<field name="date_end"/>
                    <field name="capacity"/>
                    <field name="note"/>
                    <field name="company_id"/>
                    <field name="state"/>    
                </tree>
            </field>
        </record>
        
        <record id="view_manufacture_session_form" model="ir.ui.view">
            <field name="name">ka_manufacture.session.form</field>
            <field name="model">ka_manufacture.session</field>
            <field name="arch" type="xml">
                <form>
                	<header>
<!--                        <button name="propose_daily_molasses_transaction" states="draft" type="object" class="oe_highlight" string="Propose"/>-->
<!--                        <button name="set_draft_daily_molasses_transaction" states="proposed" type="object" string="Set to Draft"/>-->
<!--                        <button name="validate_daily_molasses_transaction" states="proposed" type="object" class="oe_highlight" string="Validate"/>                            -->
                        <field name="state" widget="statusbar" clickable="True"/>
                    </header>            
                    <sheet>
<!--                    	<div class="oe_button_box" name="button_box">-->
<!--		                    <button name="action_view_picking_molasses" string="Transfers" type="object" class="oe_stat_button" -->
<!--		                    	icon="fa-bars" attrs="{'invisible': [('move_ids','=',[])]}">   -->
<!--		                    </button>-->
<!--		                </div>-->
	               		<div class="oe_title">
                           <h1><field name="name"/></h1>
                       	</div>
                        <group>
                        	<group>
	                    		<field name="fiscalyear_id" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="date_start" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="date_end" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="capacity" attrs="{'readonly': [('state','!=','draft')]}"/>	
	                        	<field name="note" attrs="{'readonly': [('state','!=','draft')]}"/>
			                    <field name="company_id" attrs="{'readonly': [('state','!=','draft')]}"/>	 
							</group>
	                   	</group>
	              	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
             
     	<record id="action_open_masa_giling" model="ir.actions.act_window">
            <field name="name">Masa Giling</field>
            <field name="res_model">ka_manufacture.session</field>
            <field name="view_type">form</field> 
            <field name="view_mode">tree,form</field>             
        </record>
        
        <menuitem id="menu_root_giling" 
        	name="Giling" 
        	icon="fa-wrench" 
        	web_icon="ka_manufacture,static/description/icon.png" 
        	sequence="31"/>
        <menuitem id="menu_data_giling" 
        	name="Data Giling" 
        	parent="ka_manufacture.menu_root_giling" 
        	sequence="1"/> 
        <menuitem id="menu_masa_giling" 
        	action="action_open_masa_giling" 
        	parent="ka_manufacture.menu_data_giling" 
        	sequence="1"/>
         
    </data>
</odoo>
