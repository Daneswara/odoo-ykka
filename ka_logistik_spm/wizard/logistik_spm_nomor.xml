<odoo>
	<data>
		<record id="view_logistik_spm_nomor" model="ir.ui.view">
			<field name="name">Nomor SPM</field>
			<field name="model">logistik.spm.nomor</field>
			<field name="arch" type="xml">
				<form string="Penomoran SPM" version="7.0">
					<group>
						<h2 colspan="2">
							<label string="Kosongkan jika nomor sudah ada" class="text-danger"/>
						</h2>
						<field name="no_spm" style="width: 30%%"/>
					</group>
					<footer>
						<button name="action_nomor_spm" string="Simpan" type="object" class="oe_highlight"/> or
						<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_logistik_spm_nomor" model="ir.actions.act_window">
			<field name="name">Penomoran SPM</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.nomor</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'record_id' : active_id}</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>