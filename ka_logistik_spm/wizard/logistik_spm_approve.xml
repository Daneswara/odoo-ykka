<?xml version="1.0"?>
<odoo>
	<data>
		<!--SPLIT dan VALIDASI SPM-->
		<record model="ir.ui.view" id="view_logistik_spm_approve_form">
			<field name="name">logistik.spm.approve.form</field>
			<field name="model">logistik.spm.approve</field>
			<field name="arch" type="xml">
				<form string="Split dan Validasi SPM" version="7.0">
					<group col="2">
						<field name="spm_id"/>
						<field name="tanggal"/>
						<field name="stasiun_id"/>
						<field name="line_ids" colspan="2" nolabel="1" default_focus="1">
							<tree string="Detail SPM" create="false" delete="false" editable="bottom">
								<field name="product_id"/>
								<field name="spesifikasi"/>
								<field name="kuantum"/>
								<field name="qty_partial" default_focus="1"/>
								<field name="unit_id"/>
								<field name="tgl_minta"/>
								<field name="pkrat_id"/>
							</tree>
						</field>
					</group>
					<footer>
						<button name="do_partial" string="Simpan" type="object" class="oe_highlight"/>
						or
						<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<record id="action_logistik_spm_approve" model="ir.actions.act_window">
			<field name="name">Realisasi SPM untuk Logistik</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.approve</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'record_id' : active_id}</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>
