<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_logistik_spm_line_approve" model="ir.ui.view">
			<field name="name">logistik.spm.line.approve</field>
			<field name="model">logistik.spm.line.approve</field>
			<field name="arch" type="xml">
				<form string="Persetujuan Permintaan Material">
					<group>
						<field name="stasiun_id"/>
						
						<separator string="Barang yang diminta" colspan="2"/>
						<field name="product_id" attrs="{'required': [('category','!=','noncode')]}"/>
						<field name="product_desc"/>
						<field name="spesifikasi" string="Spek Yang Diminta" attrs="{'readonly':[('product_id','!=', False)],'required':[('product_id','=', False)]}"/>
						<field name="account_id" style="width: 50%%"/>
						<field name="rab_id" invisible="1"/>
						<field name="category" class="oe_edit_only"/>
						<field name="pengadaan" readonly="1"/>
						<field name="tgl_minta"/>
						<field name="kuantum_spm"/>
						<field name="kuantum"/>
						<field name="less_qty" invisible="1"/>
						<field name="alasan" attrs="{'required':[('less_qty','=', True)], 'invisible':[('less_qty', '=', False)]}"/>

						<separator string="Peruntukan Proyek / Investasi" colspan="2"/>
						<field name="pkrat_id" style="width: 50%%" domain="[('stasiun_id', '=', stasiun_id)]"/>
						<field name="pkrat_name"/>

						<separator colspan="2"/>
						<field name="catatan"/>
					</group>
					<footer>
						<button name="do_simpan" string="Simpan" type="object" class="oe_highlight"/> or <button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_logistik_spm_line_pengajuan_approve" model="ir.actions.act_window">
			<field name="name">Persetujuan Permintaan Material dan Alokasi Perkiraan</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.line.approve</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'record_id' : active_id}</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>