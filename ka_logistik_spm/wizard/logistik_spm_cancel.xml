<odoo>
	<data>
		<record id="view_logistik_spm_cancel_form" model="ir.ui.view">
			<field name="name">Pembatalan SPM</field>
			<field name="model">logistik.spm.cancel</field>
			<field name="arch" type="xml">
				<form string="Pembatalan SPM">
					<group>
						<field name="cancel_reason"/>
					</group>
					<footer>
						<button name="do_spm_cancel" string="Simpan" type="object" class="oe_highlight"/>
						or
						<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_logistik_spm_cancel" model="ir.actions.act_window">
			<field name="name">Pembatalan SPM</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.cancel</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<!-- <field name="context">{'record_id' : active_id}</field> -->
			<field name="target">new</field>
        </record>
	</data>
</odoo>