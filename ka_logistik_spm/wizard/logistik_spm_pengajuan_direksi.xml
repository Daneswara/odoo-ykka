		<record model="ir.ui.view" id="view_logistik_spm_direksi_pengajuan_form">
			<field name="name">logistik.spm.pengajuan.direksi.form</field>
			<field name="model">logistik.spm.pengajuan.direksi</field>
			<field name="type">form</field>
			<field name="priority" eval="1"/>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="nomor" style="width: 20%%" readonly="1"/>
						<field name="tanggal"/>
						<field name="company_id" groups="base.group_multi_company" readonly="1"/>
						<field name="category" readonly="1"/>
					</group>
					<group>
						<field name="line_ids" nolabel="1">
							<tree create="false">
								<field name="selected"/>
								<field name="pengajuan_id"/>
								<field name="product_id"/>
								<field name="spesifikasi"/>
								<field name="kuantum"/>
								<field name="tgl_minta"/>
								<field name="pkrat_id"/>
								<field name="account_id"/>
								<field name="stasiun_id"/>
							</tree>
							<form>
								<group>
									<group>
										<field name="selected" string="Pilih Untuk Diproses"/>
										<field name="pengajuan_id" readonly="1" />
										<field name="product_id" readonly="1" />
										<field name="spesifikasi" readonly="1" />
										<field name="kuantum" readonly="1" />
										<field name="tgl_minta" readonly="1" />
									</group>
									<group>
										<field name="pkrat_id" readonly="1" />
										<field name="account_id" readonly="1" />
										<field name="stasiun_id" readonly="1" />
									</group>
								</group>
							</form>
						</field>
					</group>
					<group>
						<field name="note" nolabel="1" placeholder="Catatan...."/>
					</group>
					<footer>
						<button name="do_create_spm_direksi" string="Buat SPM Ke Direksi - RAB" type="object" class="oe_highlight" attrs="{'invisible': [('category','!=','rab')]}"/>
						<button name="do_create_spm_direksi" string="Buat SPM Ke Direksi - Non RAB" type="object" class="oe_highlight" attrs="{'invisible': [('category','!=','nonrab')]}"/>
						<button name="do_create_spm_direksi" string="Buat SPM Ke Direksi - Tanpa Kode" type="object" class="oe_highlight" attrs="{'invisible': [('category','!=','noncode')]}"/>
						Atau
						<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_logistik_spm_direksi_rab" model="ir.actions.act_window">
			<field name="name">SPM Ke Direksi - RAB</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.pengajuan.direksi</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'category': 'rab'}</field>
			<field name="target">new</field>
		</record>
		<record id="action_logistik_spm_direksi_nonrab" model="ir.actions.act_window">
			<field name="name">SPM Ke Direksi - Non RAB</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.pengajuan.direksi</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'category': 'nonrab'}</field>
			<field name="target">new</field>
		</record>
		<record id="action_logistik_spm_direksi_noncode" model="ir.actions.act_window">
			<field name="name">SPM Ke Direksi - Tanpa Kode</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.spm.pengajuan.direksi</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'category': 'noncode'}</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>