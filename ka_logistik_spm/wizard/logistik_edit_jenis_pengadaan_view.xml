<odoo>
	<data>
		<record model="ir.actions.act_window" id="act_edit_pengadaan_wizard">
			<field name="name">Edit Jenis Pengadaan</field>
			<field name="res_model">logistik.edit.jenis.pengadaan</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
		<record model="ir.ui.view" id="view_logistik_edit_jenis_pengadaan">
			<field name="name">logistik.edit.jenis.pengadaan</field>
			<field name="model">logistik.edit.jenis.pengadaan</field>
			<field name="arch" type="xml">
				<form string="Edit Jenis Pengadaan">
					<group>
						<field name="spm_line_id" invisible="1"/>
						<field name="pengadaan" required="1" readonly="1"/>
						<field name="category" attrs="{'invisible':[('pengadaan','=','RP')],'required':[('pengadaan','=','RD')]}"/>
						<field name="reason" widget="radio" attrs="{'invisible': [('pengadaan', '=', 'RP')], 'required': [('pengadaan','=','RD')]}"/>
						<field name="other_reason" attrs="{'invisible': [('reason','!=','other')], 'required': [('reason','=','other')]}"/>
					</group>
					<footer>
						<button name="do_change_jenis_pengadaan" string="Apply" type="object" class="oe_highlight"/>
						<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>