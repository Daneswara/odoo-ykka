<odoo>
	<data>
		<record id="view_logistik_spm_config_form" model="ir.ui.view">
            <field name="name">logistik.spm.config</field>
            <field name="model">logistik.spm.config</field>
            <field name="arch" type="xml">
                <form string="Settings" class="oe_form_configuration">
                	<header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <field name="company_id" invisible="1"/>
                    <group string="Verifikasi Kode Barang Oleh :">
                    	<field name="verifikasi_kode_barang_partners_ids" nolabel="1">
                    		<tree>
                    			<field name="name"/>
                    			<field name="email"/>
                    		</tree>
                    	</field>
                    </group>
                    <group string="Notifikasi Kode Barang Baru Kepada :">
                    	<field name="notif_kode_barang_baru_partners_ids" nolabel="1">
                    		<tree>
                    			<field name="name"/>
                    			<field name="email"/>
                    		</tree>
                    	</field>
                    </group>
                    <group string="Notifikasi SPM Lokal Kepada :">
                    	<field name="notif_spm_lokal_partners_ids" nolabel="1">
                    		<tree>
                    			<field name="name"/>
                    			<field name="email"/>
                    		</tree>
                    	</field>
                    </group>
                    <group string="Notifikasi SPM Direksi Kepada :">
                    	<field name="notif_spm_direksi_partners_ids" nolabel="1">
                    		<tree>
                    			<field name="name"/>
                    			<field name="email"/>
                    		</tree>
                    	</field>
                    </group>
                    <group string="Logistik User :">
                    	<field name="logistik_user_ids" nolabel="1">
                    		<tree>
                    			<field name="name"/>
                    			<field name="email"/>
                    		</tree>
                    	</field>
                    </group>
                </form>
            </field>
        </record>
	
		<record id="action_view_logistik_spm_config" model="ir.actions.act_window">
	        <field name="name">Settings</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">logistik.spm.config</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
	    </record>
	    
	    <menuitem id="menu_logistik_spm_config"
			parent="ka_logistik_spm.spm_root" 
			name="Configuration"
			sequence="99"/> 
		
		<menuitem action="action_view_logistik_spm_config"
			id="menu_setting_logistik_spm" 
			parent="ka_logistik_spm.menu_logistik_spm_config" 
			name="Settings"
			sequence="10"/>
	</data>
</odoo>