<odoo>
	<data>
		<template id="report_pengajuan_spm">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="ka_report_layout.ka_external_layout_logo_only">
						<div class="page"  style="font-family: 'Arial';font-size:15px">
							<div class="row text-center" style="padding:0px">
                                <t t-if="o.pengadaan=='RD'">
                                    <b style="font-size:20px">SURAT PERMINTAAN MATERIAL PENGADAAN OLEH DIREKSI</b>
                                </t>
                                <t t-if="o.pengadaan=='RP'">
                                    <b style="font-size:20px">SURAT PERMINTAAN MATERIAL PENGADAAN OLEH PG</b>
                                </t>
							</div>
							<div class="row text-center" style="padding:0px">
								<b>No : <span t-field="o.nomor"/></b>
							</div>
							<br/>
							<table>
								<col width="1000"/>
								<col width="600"/>
								<tr>
									<td style="padding-bottom:10px">Dari Bagian : <strong><span t-field="o.department_id.name"/></strong></td>
									<td style="padding-bottom:10px">Seksi : <strong><span t-field="o.seksi_id.name"/></strong></td>
								</tr>
							</table>
							<table width="100%">
								<col width="50"/>
								<col width="80"/>
								<col width="840"/>
								<col width="100"/>
								<col width="75"/>
								<col width="355"/>
								<col width="100"/>
								<thead style="@media print {thead {display: table-header-group;}}">
									<tr>
										<th rowspan="2" style="text-align: center;padding: 5px;border: 1px solid black;vertical-align:middle;">No</th>
										<!-- <th>No Perk</th> -->
										<th rowspan="2" style="text-align: center;padding: 5px;border:1px solid black;vertical-align:middle;">Kode Barang</th>
										<th rowspan="2" style="text-align: center;padding: 5px;border:1px solid black;vertical-align:middle;">Nama dan Spesifikasi Barang</th>
										<th colspan="2" style="text-align: center;padding: 5px;border:1px solid black;">Jumlah</th>
										<th rowspan="2" style="text-align: center;padding: 5px;border:1px solid black;vertical-align:middle;">Keperluan</th>
										<th rowspan="2" style="text-align: center;padding: 5px;border:1px solid black;vertical-align:middle;">Tgl.Datang</th>
									</tr>
									<tr>
										<th scope="col"  style="text-align: center;padding: 5px;border:1px solid black;">Saldo</th>
										<th scope="col"  style="text-align: center;padding: 5px;border:1px solid black;">Diminta</th>
									</tr>
								</thead>
								<t t-foreach="o.line_ids" t-as="l">
									<tr>
										<td style="border:1px solid black;padding: 5px;text-align: center;">
											<span t-esc="l_index+1"/>
										</td>
<!-- 										<td>
											<div style="width:100px;overflow: hidden;">
												<span t-field="l.account_id"/>
											</div>
										</td>
 -->									<td style="border:1px solid black;padding: 5px;">
											<div style="width:100px;overflow: hidden;">
												<span t-field="l.product_id.default_code"/>
											</div>
										</td>
										<td style="border:1px solid black;padding: 5px;">
											<t t-if="l.product_id">
												<span t-field="l.product_id.name"/><br/>
											</t>
											<span t-field="l.spesifikasi"/></td>
										<td style="border:1px solid black;padding: 5px;">
											<span t-field="l.product_qoh"/> <span t-field="l.product_id.uom_id.name"/>
										</td>
										<td style="border:1px solid black;padding: 5px;">
											<span t-field="l.kuantum_spm"/> <span t-field="l.unit_id.name"/>
										</td>
										<td style="border:1px solid black;padding: 5px;">
											<div style="width:110px;overflow: hidden;">
												<span t-field="l.pkrat_id"/>
												<t t-if="l.pkrat_id">
													<br/>
												</t>
												<span t-field="l.catatan"/>
											</div>
										</td>
										<td style="border:1px solid black;padding: 5px;">
											<span t-field="l.tgl_minta"/>
										</td>
									</tr>
								</t>
							</table>
							<br/>		
							<table>
								<col width="300"/>
								<col width="300"/>
								<col width="300"/>
								<col width="300"/>
								<tr>
									<td style="text-align:center" colspan="2">Disetujui</td>
									<td style="text-align:center">Diketahui</td>									
									<td style="text-align:center">
										<span t-field="o.company_id.city"/>, <span t-field="o.tanggal" t-field-options='{"format": "d MMMM y"}'/>
									</td>
								</tr>
								
 								<tr>
									<td style="text-align:center">
										Pemimpin<br/><br/><br/><br/><br/><br/>
										<u><span t-field="o.company_id.dept_dirut.manager_id.name"/></u>
									</td>
									<td style="text-align:center">
										Kepala Bagian TUK<br/><br/><br/><br/><br/><br/>
										<u><span t-field="o.company_id.dept_tuk.manager_id.name"/></u>
									</td>
									<td style="text-align:center">
										Kepala Bagian
										<br/><br/><br/><br/><br/><br/>
										<t t-if="o.department_id.manager_id">
											<u><span t-field="o.department_id.manager_id.name"/></u>
										</t>
										<t t-if="not o.department_id.manager_id">
											(____________________)
										</t>
									</td>
									<td style="text-align:center">
										Yang Membutuhkan
										<br/><br/><br/><br/><br/><br/>
										<t t-if="o.create_uid">
											<u><span t-field="o.create_uid.name"/></u>
										</t>
										<t t-if="not o.create_uid">
											(____________________)
										</t>
									</td>
								</tr>	
								
<!-- 								<tr>
									<td style="text-align:center">
										Disetujui
										<br/>
										Pemimpin<br/><br/><br/><br/><br/><br/>
										(<span t-field="o.company_id.dept_dirut.manager_id.name"/>)
									</td>
									<td style="text-align:center">
										Disetujui
										<br/>
										Kepala Bagian TUK<br/><br/><br/><br/><br/><br/>
										(<span t-field="o.company_id.dept_dirut.manager_id.name"/>)
									</td>
