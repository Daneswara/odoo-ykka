										<br/>Kepala Bagian
										<br/><br/><br/><br/><br/><br/>
										<t t-if="o.department_id.manager_id">
											(<span t-field="o.department_id.manager_id.name"/>)
										</t>
										<t t-if="not o.department_id.manager_id">
											(____________________)
										</t>
									</td>
									<td style="text-align:center">
										<span t-field="o.company_id.city"/>, <span t-field="o.tanggal" t-field-options='{"format": "d MMMM y"}'/>
										<br/>Yang Membutuhkan
										<br/><br/><br/><br/><br/><br/>
										<t t-if="o.seksi_id.manager_id">
											(<span t-field="o.seksi_id.manager_id.name"/>)
										</t>
										<t t-if="not o.seksi_id.manager_id">
											(____________________)
										</t>
									</td>
								</tr>
 -->							</table>
						</div>
					</t>
				</t>
			</t>
		</template>

		<report
			id="action_report_logistik_spm"
			model="logistik.pengajuan.spm"
			string="Pengajuan SPM"
			report_type="qweb-pdf"
			file="ka_logistik_spm.report_pengajuan_spm"
			name="ka_logistik_spm.report_pengajuan_spm"
			menu="False"
		/>
		
		<record id="paperformat_frenchcheck" model="report.paperformat">
			<field name="name">French Bank Check</field>
			<field name="header_spacing">1</field>
			<field name="dpi">80</field>
		</record>
		
	</data>
</odoo>