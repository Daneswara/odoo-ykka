<?xml version="1.0"?>
<odoo>
    <data>
		<record id="view_sale_order_contract_form" model="ir.ui.view">
            <field name="name">sale.order.contract.form</field>
            <field name="model">sale.order.contract</field>
            <field name="arch" type="xml">
                <form string="Sale Order Contract" version="7">
                	<sheet>
                		<div class="oe_button_box_long" name="button_box">
                			<button type="object" string="Kontrak SO" name="get_kontrak_template" class="oe_stat_button" icon="fa-print"/>
                		</div>
	                    <div class="oe_title">
	                    	<label class="oe_edit_only" for="name" string="Nomor Kontrak"/>
	                        <h1><field name="name"/></h1>
	                    </div>
	                    <group>
	                        <group string="Informasi Kontrak">	
								<field name="operating_unit_id" options="{'no_create': True}" domain="[('is_operating_unit','=','True')]"/>				
								<field name="contract_date"/>
	                            <field name="partner_id" options="{'no_create': True}"/>
								<field name="ttd_customer" domain="[('parent_id','=',partner_id)]" attrs="{'invisible': [('partner_id','=',False)]}" options="{'no_create': True}"/>	                            
								<field name="quantity"/>
								<field name="product_uom" options="{'no_create': True}"/>
	 							<field name="price_unit"/>		
	                            <field name="sale_date"/>	
								<field name="date_expected"/>
	                            <field name="taun_produksi"/>
	                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>		
	                        	<field name="partner_company_id" invisible="1"/>
	                        </group>
	                        <group string="Pembayaran">
								<field name="bank_name" options="{'no_create': True}" domain="[('partner_id','=',partner_company_id)]"/>
								<field name="account_number"/>
								<field name="down_payment_date"/>
								<field name="final_payment_date"/> 
								<field name="delivery_date"/>  
								<field name="note_pengambilan"/>                         
	                        </group>
	                    </group>
	            	</sheet>
                </form>
            </field>
        </record>
	</data>
</odoo>


