<odoo>
    <data>
    	<record id="view_order_form_transleted" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="partner_id" position="attributes">
                    <attribute name="string">Rekanan</attribute>  
                </field>
                <field name="date_order" position="attributes">
                    <attribute name="string">Tanggal Pesanan</attribute>  
                </field> 
                <field name="confirmation_date" position="attributes">
                    <attribute name="string">Tanggal Konfirmasi</attribute>  
                </field> 
                <field name="payment_term_id" position="attributes">
                    <attribute name="string">Tenor</attribute>  
                </field> 
                <xpath expr="//form/sheet/notebook/page[1]" position="attributes">
            		<attribute name="string">Produk</attribute> 
            	</xpath>
           		<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[5][@name='product_uom_qty']" position="attributes">
            		<attribute name="string">Kuantum</attribute> 
            	</xpath>
            	<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[7][@name='qty_invoiced']" position="attributes">
            		<attribute name="string">Kuantum Invoice</attribute> 
            	</xpath>
            	<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[11][@name='price_unit']" position="attributes">
            		<attribute name="string">Harga Satuan</attribute> 
            	</xpath>
            	<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[13][@name='discount']" position="attributes">
            		<attribute name="string">Diskon (%)</attribute> 
            	</xpath>
                <field name="amount_untaxed" position="attributes">
                    <attribute name="string">Total Sebelum Pajak</attribute>  
                </field> 
                 <field name="amount_tax" position="attributes">
                    <attribute name="string">Pajak</attribute>  
                </field> 
                <field name="note" position="attributes">
                    <attribute name="placeholder">standar setup dan kondisi dalam pengaturan perusahaan Anda</attribute>  
                </field>
            	<xpath expr="//form/sheet/notebook/page[2]" position="attributes">
            		<attribute name="string">Informasi Lainnya</attribute> 
            	</xpath>
                 <field name="origin" position="attributes">
                    <attribute name="string">Dokumen Asal</attribute>  
                </field> 
                 <group name="sales_person" position="attributes">
                    <attribute name="string">Informasi Penjualan</attribute>  
                </group> 
                 <field name="client_order_ref" position="attributes">
                    <attribute name="string">Referensi Rekanan</attribute>  
                </field> 
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="string">Produk</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                     <attribute name="string">Satuan Ukuran</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                     <attribute name="string">Pajak</attribute>
                </xpath>
            </field>
    	</record>
    	
    	<record id="sale_view_inherit_change string" model="ir.ui.view">
            <field name="name">sale.order.change.string</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="ka_sale.sale_view_inherit_replace_requested_date"/>
            <field name="arch" type="xml"> 
                <field name="requested_date" position="attributes">
                    <attribute name="string">Tanggal Permintaan</attribute>  
                </field> 
                <field name="validity_date" position="attributes">
                    <attribute name="string">Jatuh Tempo</attribute>  
                </field>
        	</field>
        </record>
        
        <record id="sale_view_shipping_information" model="ir.ui.view">
            <field name="name">sale.order.shipping.information</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml"> 
                <group name="sale_shipping" position="attributes">
                    <attribute name="string">Informasi Pengiriman</attribute>  
                </group> 
                 <field name="warehouse_id" position="attributes">
                    <attribute name="string">Gudang</attribute>  
                </field> 
                 <field name="picking_policy" position="attributes">
                    <attribute name="string">Aturan Pengiriman</attribute>  
                </field> 
        	</field>
        </record>
        
        <record id="view_sale_order_dates_inherit" model="ir.ui.view">
	        <field name="name">sale.order.dates.inherit</field>
	        <field name="model">sale.order</field>
	        <field name="inherit_id" ref="sale_order_dates.view_order_form_inherit_sale_stock_inherit_sale_order_dates"/>
	        <field name="arch" type="xml">
	        	<field name="commitment_date" position="attributes">
                    <attribute name="string">Tanggal Perjanjian</attribute>  
                </field>
	        	<field name="effective_date" position="attributes">
                    <attribute name="string">Tanggal Efektif</attribute>  
                </field>
	        </field>
	    </record>
	    
	     <record id="view_order_tree_inherit" model="ir.ui.view">
	        <field name="name">sale.order.tree</field>
	        <field name="model">sale.order</field>
	        <field name="inherit_id" ref="sale.view_order_tree"/>
	        <field name="arch" type="xml"> 
	        	<field name="name" position="attributes">
                    <attribute name="string">Nomor Pesanan</attribute>  
                </field>
	        	<field name="date_order" position="attributes">
                    <attribute name="string">Tanggal Pesanan</attribute>  
                </field>
                <field name="requested_date" position="attributes">
                    <attribute name="string">Tanggal Permintaan</attribute>  
                </field>
                <field name="commitment_date" position="attributes">
                    <attribute name="string">Tanggal Perjanjian</attribute>  
                </field>
                <field name="partner_id" position="attributes">
                    <attribute name="string">Rekanan</attribute>  
                </field>
                <field name="invoice_status" position="attributes">
                    <attribute name="string">Status Invoice</attribute>  
                </field>
            </field>
        </record>
    	
    </data>
</odoo>
        