<odoo>
	<data>
		<record id="ka_sale_order_kanban" model="ir.ui.view">
            <field name="name">ka_sale.order.kanban</field>
            <field name="model">ka_sale.order.category</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard" create="0" js_class="ka_sale_dashboard_view">
                	<field name="name"/>
                	<field name="order_ids"/>
                	<field name="kanban_dashboard"/>
                	<templates>
                		<t t-name="kanban-box">
                			<t t-set="sale_orders" t-value="JSON.parse(record.kanban_dashboard.raw_value)"/>
                			<div class="so-kanban-box" name="sale_order_category">
	                			<div class="o_kanban_card_header">
	                                <div class="o_kanban_card_header_title">
	                                    <div class="o_primary">
	                                        <h4><strong><a type="object" name="get_so_action_so_category">
	                                            <field name="name"/>
	                                        </a></strong></h4>
	                                    </div>
	                                </div>
                                    <div class="o_kanban_manage_button_section so-kanban-add-section">
                                        <button name="action_new_so" type="object" class="btn btn-kas" string="New Quotation"><i class="fa fa-plus fa-new-so"></i></button>
                                    </div>
	                            </div>
	                            <div class="container o_kanban_card_content o_visible">
	                                <div class="row">
	                                	<div class="col-xs-12" style="height:230px; overflow-y:scroll;">
	                                		<table class="table table-condensed">
                                                <thead>
                                                    <tr>
                                                        <th>No. Pesanan</th>
                                                        <th>Tanggal</th>
                                                        <th>Rekanan</th>
                                                        <th>Status SO</th>
                                                        <th>Status INV</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr t-foreach="sale_orders" t-as="so">
                                                        <td class="so-target" style="cursor:pointer; color:#337AB7;">
                                                        	<span class="to-hidden"><t t-esc="so.id"/></span> <t t-esc="so.no_so"/>
                                                        </td>
                                                        <td><t t-esc="so.tgl"/></td>
                                                        <td><t t-esc="so.partner"/></td>
                                                        <td><t t-esc="so.state"/></td>
                                                        <td><t t-esc="so.state_inv"/></td>
                                                    </tr>
                                                </tbody>
                                            </table>
		                                	
		                                </div>
	                                </div>
	                            </div>
	                		</div>
                		</t>
                	</templates>
                </kanban>
            </field>
        </record>

        <record id="action_open_so_kanban" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">ka_sale.order.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="ka_sale_order_kanban"/>
        </record>

		<record id="sales_team.menu_sales_team_act" model="ir.ui.menu">
        	<field name="name">Dashboard</field>
            <field name="action" ref="action_open_so_kanban"/>
        </record>

	</data>
</odoo>