<odoo>
	<data>
		<record id="view_ka_customer_invoice_form" model="ir.ui.view">
            <field name="name">ka.customer.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='number']" position="after">
                    <div class="oe_button_box_long" name="button_box">
                    	<field name="amount_paid" invisible="1"/>
                        <button type="action" string="Slip Kwitansi" name="%(slip_kwitansi_so)d" class="oe_stat_button"
                                icon="fa-print" attrs="{'invisible': ['|',('state','in', ('draft','cancel')),('amount_paid','=',0)]}"/>
                    </div>
                </xpath>
            	<field name="partner_id" position="after">
                    <field name="source_partner_id" string="Customer" attrs="{'invisible': [('source_partner_id', '=', False)]}" options="{'no_create': True}"/>  
                	<field name="agent_partner_id" domain="[('company_type','=','person')]" attrs="{'readonly': [('state','!=','draft')]}"/>
                	<field name="sale_category_id"/>
                </field>
                <xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[@name='product_id']" position="after">
                    <field name="sale_order_number"/>
                </xpath>
            	<field name="partner_id" position="attributes">
            		<attribute name="attrs">{'invisible': [('source_partner_id', '!=', False)]}</attribute>
            		<attribute name="options">{'no_create': True}</attribute>
            	</field>
            	<field name="payment_term_id"  position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>  
                </field>
                <field name="user_id"  position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>  
                </field>
                <field name="team_id"  position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>  
                </field>
                <xpath expr="//field[@name='account_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_analytic_id']" position="attributes">
                    <attribute name="invisible">1</attribute> 
                	<attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='uom_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
            	<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[@name='analytic_tag_ids']" position="attributes">
                	<attribute name="invisible">1</attribute>
                	<attribute name="options">{'no_create': True}</attribute>
                </xpath>
            	<xpath expr="//form/sheet/notebook/page[1]/field[1]/tree/field[@name='name']" position="attributes">
                	<attribute name="invisible">1</attribute>
                </xpath>
                <field name="fiscal_position_id" position="attributes">
                	<attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>
	</data>
</odoo>