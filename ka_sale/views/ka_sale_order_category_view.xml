<odoo>
	<data>
		<record id="view_ka_sale_order_category_tree" model="ir.ui.view">
            <field name="name">ka_sale.order.category.tree</field>
            <field name="model">ka_sale.order.category</field>
            <field name="arch" type="xml">
                <tree>
                	<field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                    <field name="route_id"/>                   
                </tree>
            </field>
        </record>
        
        <record id="view_ka_sale_order_category_form" model="ir.ui.view">
            <field name="name">ka_sale_order.category.form</field>
            <field name="model">ka_sale.order.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                        	<group>
	                            <field name="name" required="1"/>
	                            <field name="route_id"/>
	                            <field name="need_contract"/>
								<field name="contract_template" domain="[('report_type','in',('qweb-pdf','qweb-html'))]"
									 attrs="{'invisible': [('need_contract','=',False)], 'required':[('need_contract','=',True)]}"/>	                            
								<field name="do_report_template" domain="[('report_type','in',('qweb-pdf','qweb-html'))]"/>
							</group>
                        </group>
                        <group string="Products">
                        	<field name="product_ids" options="{'no_create': True}" required="1" nolabel="1">
                        		<tree>
	                        		<field name="default_code"/>
	                        		<field name="name"/>
	                        		<field name="uom_id"/>
	                        		<field name="lst_price"/>
	                        	</tree>
                        	</field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_open_so_category" model="ir.actions.act_window">
            <field name="name">Kategori Penjualan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ka_sale.order.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="view_id" ref="ka_sale.view_ka_sale_order_category_tree"/>
        </record>
        
        <menuitem id="menu_so_category" 
            action="action_open_so_category" 
            name="Kategori Penjualan" 
            parent="sales_team.menu_sale_config"
            sequence="1"/>
        
	</data>
</odoo>