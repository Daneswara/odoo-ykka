<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data> 
		<template id="template_kwitansi_so">
			<t t-foreach="docs" t-as="o">
				<div class="row">
					<t t-call="ka_sale.kwitansi_so_document"/>
				</div>
			</t>
		</template>  

		<template id="kwitansi_so_document">
			<t t-call="report.html_container">
			<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
				<div class="page">
					<div class ="row">
						<div class="col-xs-12" style="font-family: Dotrice; font-size: 14px;">
							<p style="padding-left:30px"><span t-field="o.number"/><br></br></p>
							<p style="padding-left:140px; margin-top:40px"><span t-field="o.partner_id.name"/></p>
							<p style="padding-left:140px; line-height: 200%; margin-top:15px"><span t-esc="o.amount_to_text_id(o.amount_paid)"/></p>
														
							<p style="padding-left:160px; margin-top:13px"> 
								<t t-foreach="o.invoice_line_ids" t-as="inv_line">
									<span t-field="inv_line.product_id.name"/> sebanyak 
									<span t-esc="str('{0:,.2f}'.format(float(inv_line.quantity))).replace('.', '%').replace(',', '.').replace('%', ',')"/> 
									<span t-field="inv_line.uom_id.name"/>; 
								</t>
								<br/>
							</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-4 col-xs-offset-8" style="margin-top:77px;font-family: Dotrice; font-size: 14px;">
							<p style="padding-left:30px"><span t-esc="datetime.datetime.now().strftime('%d %B %Y')"/><br></br></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12" style="margin-top:104px;font-family: Dotrice; font-size: 14px;">
							<p style="padding-left:30px"><span t-esc="str('{0:,.2f}'.format(float(o.amount_paid))).replace('.', '%').replace(',', '.').replace('%', ',')"/><br></br></p>
						</div>
					</div>
				</div>
			</t>
		</template>
	</data>
</odoo>