<odoo>
	<data>
		<record id="view_stock_picking_split_wizard" model="ir.ui.view">
            <field name="name">stock.picking.split.wizard.form</field>
            <field name="model">stock.picking.split.wizard</field>
            <field name="arch" type="xml">
            	<form string="Split Stock Picking">
            		<group>
            			<field name="product_id" readonly="1"/>
            			<field name="total_qty" readonly="1"/>
            			<field name="product_uom" readonly="1"/>
            		</group>
            		<field name="split_lines" nolabel="1">
            			<tree editable="bottom">
            				<field name="delivery_number"/>
            				<field name="agent_partner_id" options="{'no_create': True}" invisible="1"/>
            				<field name="timbangan_id" options="{'no_create': True}"  domain="[('weight_net','>',0)]"/>
            				<field name="product_qty" sum="Total"/>
            			</tree>
            		</field>
            		<footer>
	            		<button name="do_split_stock_picking" string="Split" type="object" class="oe_highlight"/>
	                    <button string="Cancel" class="oe_link" special="cancel"/>
	            	</footer>
            	</form>
            </field>
        </record>
	</data>
</odoo>