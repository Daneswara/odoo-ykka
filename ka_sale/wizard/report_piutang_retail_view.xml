<odoo>
	<data>
		<record id="view_report_piutang_retail_wiz" model="ir.ui.view">
            <field name="name">view.report.piutang.retail.wiz</field>
            <field name="model">report.piutang.retail.wiz</field>
            <field name="arch" type="xml">
                <form string="Formulir Laporan Piutang Retail">
                    <div class="col-xs-6">
                        <group>
                            <field name="sale_category_id" string="Kategori" required="1"/>
                            <field name="date_limit" string="Tanggal" required="1"/>
                        </group>
                    </div>
                    <footer>
                        <button name="generate_report_piutang_retail" string="Generate PDF" type="object" class="btn-primary" 
                                attrs="{'invisible':['|',('date_limit','=',False),('sale_category_id','=',False)]}"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
		<record id="action_report_piutang_retail" model="ir.actions.act_window">
            <field name="name">Laporan Piutang Retail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.piutang.retail.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_report_piutang_retail_wiz"/>
            <field name="target">new</field>
        </record>  
           
        <menuitem id="menu_report_piutang_retail" 
        	action="action_report_piutang_retail" 
        	name="Laporan Piutang Retail" 
        	parent="sales_team.menu_sale_report" 
        	sequence="11"/>
	</data>
</odoo>