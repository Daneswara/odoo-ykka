<odoo>
	<data>
		<record id="view_report_stock_monthly_wizard" model="ir.ui.view">
            <field name="name">report.stock.monthly.wizard.form</field>
            <field name="model">report.stock.monthly.wizard</field>
            <field name="arch" type="xml">
                <form string="Laporan Stok Bulanan">
                    <div class="col-xs-6">
                        <group>
                            <field name="sale_category_id" string="Kategori" required="1"/>
                            <field name="location_id" string="Lokasi" required="1"/>
                            <field name="date_from" string="Dari" required="1"/>
                            <field name="date_to" string="Sampai" required="1"/>
                        </group>
                    </div>
                    <footer>
                        <button name="generate_report_stock_retail_monthly" string="Generate PDF" type="object" class="btn-primary"
                                attrs="{'invisible':['|','|','|',('date_from','=',False),('date_to','=',False),('sale_category_id','=',False),('location_id','=',False)]}"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
		<record id="action_report_stock_monthly" model="ir.actions.act_window">
            <field name="name">Laporan Stok Bulanan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.stock.monthly.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>  
           
        <menuitem id="menu_report_stock_monthly" 
        	action="action_report_stock_monthly" 
        	name="Laporan Stok Bulanan"
        	parent="sales_team.menu_sale_report" 
        	sequence="13"/>
	</data>
</odoo>