<odoo>
	<data>
		<record id="view_report_penjualan_gula_retail_wiz" model="ir.ui.view">
            <field name="name">view.report.penjualan.gula.retail.wiz</field>
            <field name="model">report.penjualan.gula.retail.wiz</field>
            <field name="arch" type="xml">
                <form string="Formulir Laporan Penjualan Gula Retail">
                    <div class="col-xs-6">
                        <group>
                        	<field name="sale_category_id" string="Kategori" required="1"/>
                            <field name="date_from" string="Dari" required="1"/>
                            <field name="date_to" string="Sampai" required="1"/>
                        </group>
                    </div>
                    <footer>
                        <button name="generate_report_penjualan_gula_retail" string="Generate PDF" type="object" class="btn-primary"                      
                                attrs="{'invisible':['|','|',('date_from','=',False), ('date_to','=',False), ('sale_category_id','=',False)]}"/> 
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_report_penjualan_gula_retail" model="ir.actions.act_window">
            <field name="name">Laporan Penjualan Gula Retail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.penjualan.gula.retail.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_report_penjualan_gula_retail_wiz"/>
            <field name="target">new</field>
        </record>  
           
        <menuitem id="menu_report_penjualan_gula_retail" 
        	action="action_report_penjualan_gula_retail" 
        	name="Laporan Penjualan Gula Retail" 
        	parent="sales_team.menu_sale_report" 
        	sequence="15"/> 
        		
	</data>
</odoo>