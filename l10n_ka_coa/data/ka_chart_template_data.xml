<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ka_transfer_account_id" model="account.account.template">
            <field name="parent_id" ref="ka116000U00"/>
        </record>
    
        <!-- chart template -->
        <record id="ka_configurable_chart_template" model="account.chart.template">
            <field name="property_account_receivable_id" ref="ka111210U00"/>
            <field name="property_account_payable_id" ref="ka1324U00"/>
            <!-- <field name="property_account_income_categ_id" ref="ka310000U00"/> -->
            <field name="complete_tax_set" eval="False"/>
            <field name="use_anglo_saxon" eval="True"/>
<!--             <field name="property_stock_account_input_categ_id" ref="ka3809U00"/>
            <field name="property_stock_account_output_categ_id" ref="ka7099U00"/>
            <field name="property_stock_valuation_account_id" ref="ka3000U00"/> -->
            <field name="income_currency_exchange_account_id" ref="ka8409U00"/>
            <field name="expense_currency_exchange_account_id" ref="ka8502U00"/>
        </record>

        <!-- Tax template for sale and purchase -->
        <record id="sale_tax_template" model="account.tax.template">
            <field name="chart_template_id" ref="ka_configurable_chart_template"/>
            <field name="name">PPN Keluaran</field>
            <field name="amount">10</field>
            <field name="type_tax_use">sale</field>
            <field name="account_id" ref="ka1824U00"/>
            <field name="refund_account_id" ref="ka1824U00"/>
        </record>

       <record id="purchase_tax_template" model="account.tax.template">
            <field name="chart_template_id" ref="ka_configurable_chart_template"/>
            <field name="name">PPN Masukan</field>
            <field name="amount">10</field>
            <field name="type_tax_use">purchase</field>
            <field name="account_id" ref="ka1828U00"/>
            <field name="refund_account_id" ref="ka1828U00"/>
        </record>

    </data>
</odoo>
