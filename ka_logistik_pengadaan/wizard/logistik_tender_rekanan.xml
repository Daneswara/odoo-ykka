<odoo>
	<data>
		<record id="view_logistik_tender_rekanan" model="ir.ui.view">
			<field name="name">Pembelian Tender</field>
			<field name="model">logistik.tender.rekanan</field>
			<field name="arch" type="xml">
				<form string="Pembelian Tender" version="7.0">
					<group>
						<field name="rekanan_id" default_focus="1" options="{'no_create_edit': 1}"/>
					</group>
					<footer>
						<button name="create_spp" string="Buat Permintaan Penawaran/SPP" type="object" class="oe_highlight"/> atau<button string="Batal" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_logistik_tender_rekanan" model="ir.actions.act_window">
			<field name="name">Pilih rekanan yang di-ikutkan Tender</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">logistik.tender.rekanan</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="context">{'record_id' : active_id}</field>
			<field name="target">new</field>
        </record>
	</data>
</odoo>