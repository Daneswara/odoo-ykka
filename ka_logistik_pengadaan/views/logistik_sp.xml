<odoo>
	<data>
		<!-- Surat Pesanan-->
		<record model="ir.ui.view" id="logistik_pengadaan_sp">
			<field name="name">logistik.pengadaan.sp.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="ka_purchase.view_ka_purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='golongan']" position="before">
					<field name="spp_id" attrs="{'invisible':[('order_type', '=', 'lokal')]}"/>
					<field name="spm_id" attrs="{'invisible':[('order_type', '=', 'lokal')]}"/>
				</xpath>
			</field>
		</record>

		<record id="action_purchase_order_draft" model="ir.actions.act_window">
			<field name="name">Konsep SP</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.order</field>
			<field name="context">{}</field>
			<field name="domain">[('state','in',('draft','sent','bid','cancel'))]</field>
			<field name="view_mode">tree,form,graph,calendar</field>
			<field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
		</record>

		<record id="action_purchase_order_confirm" model="ir.actions.act_window">
			<field name="name">Surat Pesanan</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">purchase.order</field>
			<field name="view_mode">tree,form,graph,calendar</field>
			<field name="context">{}</field>
			<field name="domain">[('state','not in',('draft','sent','bid'))]</field>
			<field name="search_view_id" ref="purchase.view_purchase_order_filter"/>
		</record>

		<record id="action_payment_term" model="ir.actions.act_window">
			<field name="name">Termin Pembayaran</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.payment.term</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>
	</data>
</odoo>