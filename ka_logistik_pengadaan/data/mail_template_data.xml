<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!--Email template -->
        <record id="email_template_spph" model="mail.template">
            <field name="name">SPPH - Send by Email</field>
            <field name="email_from">${user.email|safe}</field>
            <field name="subject">SPPH ${object.no_spp or 'n/a' }</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="ka_logistik_pengadaan.model_logistik_spp"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="action_report_logistik_spp"/>
            <field name="report_name">${object.no_spp}_${object.partner_id.code}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[
<p>Kepada Yth : <br/>
${object.partner_id.name}
<br/>
</p>
<p>
Berikut ini kami kirimkan Surat Permintaan Penawaran Harga Nomor <strong>${object.no_spp}</strong>
<br/>
<br/>
<p>Terima kasih,</p>
<br/>
<p style="color:#eeeeee;">
% if object.user and object.user.signature:
    ${object.user.signature | safe}
% endif
</p>
]]>
            </field>
       </record>
    </data>
</odoo>
