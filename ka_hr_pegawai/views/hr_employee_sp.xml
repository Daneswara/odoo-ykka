<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_employee_sp_tree">
			<field name="name">hr.employee.sp.tree</field>
			<field name="model">hr.employee.sp</field>
			<field name="arch" type="xml">
				<tree decoration-bf="state=='draft'" decoration-primary="state=='approved'" decoration-warning="state=='canceled'">
					<field name="nomor"/>
					<field name="date_sp"/>
					<field name="name"/>
					<field name="level"/>
					<field name="employee_id"/>
					<field name="company_id" groups="base.group_multi_company"/>
					<field name="state" invisible="1"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_employee_sp_form">
			<field name="name">hr.employee.sp.form</field>
			<field name="model">hr.employee.sp</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="action_draft" string="Set Draft" type="object" states="canceled" groups="hr.group_hr_user"/>
						<button name="action_approve" string="Setujui" type="object" states="draft" class="oe_highlight" confirm="Setujui Surat Peringatan ini? Email persetujuan akan dikirimkan ke karyawan yang bersangkutan." groups="hr.group_hr_user"/>
						<button name="action_cancel" string="Batalkan" type="object" states="draft,approved" confirm="Batalkan Surat Peringatan ini? Email pembatalan akan dikirimkan ke karyawan yang bersangkutan." groups="hr.group_hr_user"/>
						<!-- <button name="%(report_ka_hr_employee_sp)d" string="Cetak SP" type="action" class="oe_highlight"/> -->
						<field name="state" widget="statusbar"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="nomor"/>
								<field name="name"/>
								<field name="level"/>
							</group>
							<group>
								<field name="date_sp"/>
								<field name="employee_id"/>
								<field name="company_id" groups="base.group_multi_company"/>
							</group>
							<field name="acuan"/>
							<field name="alasan"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_employee_sp_search">
			<field name="name">hr.employee.sp.search</field>
			<field name="model">hr.employee.sp</field>
			<field name="arch" type="xml">
				<search>
					<field name="nomor"/>
					<field name="date_sp"/>
					<field name="name"/>
					<field name="level"/>
					<field name="employee_id"/>
					<group string="Grup Unit/PG">
						<filter name="group_direksi" string="Kantor Direksi" domain="[('company_id.code', '=', 1)]"/>
						<filter name="group_pgkba" string="PG. Kebon Agung" domain="[('company_id.code', '=', 2)]"/>
						<filter name="group_pgtk" string="PG. Trangkil" domain="[('company_id.code', '=', 4)]"/>
						<separator/>
						<filter name="group_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
						<filter name="group_approved" string="Disetujui" domain="[('state', '=', 'approved')]"/>
						<filter name="group_canceled" string="Dibatalkan" domain="[('state', '=', 'canceled')]"/>
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_employee_sp">
			<field name="name">Surat Peringatan</field>
			<field name="res_model">hr.employee.sp</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input data SP terlebih dahulu.</p>
			</field>
		</record>

		<menuitem action="action_employee_sp" id="menu_sdm_sp" parent="sub_menu_kepegawaian" sequence="2"/>
	</data>
</odoo>