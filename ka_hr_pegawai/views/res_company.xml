<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_res_company_form" model="ir.ui.view">
			<field name="name">res.company.form</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">
				<field name="email" position="after">
					<field name="email_group"/>
				</field>
				
				<xpath expr="//page[1]" position="after">
					<page string="Jabatan Department">
						<group>
							<field name="dept_dirut"/>
							<field name="dept_dirprod"/>
							<field name="dept_dirkeu"/>
							<field name="dept_tuk"/>
							<field name="dept_log"/>
							<field name="manager_log"/>
							<field name="dept_sdm"/>
							<field name="dept_sales"/>
							<field name="kasir_id"/>
						</group>
					</page>
				</xpath>

				<xpath expr="//notebook" position="inside">
					<page name="hr_config" string="Setting SDM">
						<group>
							<group name="hr_config" string="SDM Kepegawaian">
								<field name="hr_pensiun_age"/>
								<field name="hr_mpp_month"/>
							</group>
						</group>
					</page>
				</xpath>
			</field>
		</record>
	</data>
</odoo>