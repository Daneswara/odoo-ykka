<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data noupdate="1">
		<record id="template_mail_employee_sp_approved" model="mail.template">
			<field name="name">Surat Peringatan Disetujui Mail Template</field>
			<field name="email_from">${object.company_id.email or ''}</field>
			<field name="subject">Pemberitahuan Surat Peringatan ${object.get_subject_name()}</field>
			<field name="email_to">${object.employee_id.work_email}</field>
			<field name="email_cc">${object.get_email_cc()}</field>
			<field name="model_id" ref="ka_hr_pegawai.model_hr_employee_sp"/>
			<field name="auto_delete" eval="False"/>
			<field name="lang"/>
			<field name="copyvalue"/>
			<field name="body_html">
<![CDATA[
<p>
	Yth. ${object.employee_id.name}
</p>
<p>
	Dengan ini kami memberitahukan bahwa ada Surat Peringatan dengan No. ${object.nomor} ditujukan kepada anda.
	<br/>
	Silakan buka lampiran (attachment) untuk keterangan lebih lanjut.
</p>
<br/>
<p>Terima Kasih</p>
]]>
			</field>
		</record>
	</data>
</odoo>