<odoo>
	<data>
		<record model="ir.actions.act_window" id="device_action">
            <field name="name">Fingerspot Device</field>
            <field name="res_model">ka_fingerspot.device</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Input data device fingerspot.</p>
            </field>
        </record>

        <record id="view_device_form" model="ir.ui.view">
            <field name="name">ka_fingerspot.device</field>
            <field name="model">ka_fingerspot.device</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Device">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_get_info" string="Info Device" icon="fa-print">
                        </button>
                        <button class="oe_stat_button" type="object" name="action_get_user_all" string="All User" icon="fa-print">
                        </button>
                        <button class="oe_stat_button" type="object" name="action_get_scan_all" string="All ScanLog" icon="fa-print">
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial_number"/>
                            <field name="server_id"/>
                            <field name="last_get"/>
                            <field name="new_presensi"/>
                            <field name="all_presensi"/>
                            <field name="users_registered"/>
                            <field name="faces_registered"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="view_device_tree" model="ir.ui.view">
            <field name="name">ka_fingerspot.device</field>
            <field name="model">ka_fingerspot.device</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Device">
                    <field name="name"/>
                    <field name="serial_number"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
	</data>
</odoo>