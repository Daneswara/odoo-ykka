<odoo>
	<data>
		<record model="ir.actions.act_window" id="action_fingerspot_server">
            <field name="name">Fingerspot Server</field>
            <field name="res_model">ka_fingerspot.server</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Input data server fingerspot.</p>
            </field>
        </record>

        <record id="view_server_form" model="ir.ui.view">
            <field name="name">ka_fingerspot.server</field>
            <field name="model">ka_fingerspot.server</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Server">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="ip_address"/>
                            <field name="port"/>
                            <field name="timeout"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Serial Number" autofocus="autofocus">
                            <field name="fingerspot_device">
                                <tree>
                                    <field name="name"/>
                           			<field name="serial_number"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <record id="view_server_tree" model="ir.ui.view">
            <field name="name">ka_fingerspot.server</field>
            <field name="model">ka_fingerspot.server</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Server">
                    <field name="name"/>
                    <field name="ip_address"/>
                    <field name="port"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
	</data>
</odoo>