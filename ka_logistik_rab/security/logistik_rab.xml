<odoo>
	<data>
		<record model="ir.module.category" id="logistik_rab_category">
			<field name="name">LOG2 - Logistik RAB</field>
			<field name="description">Pemeliharaan File RAB</field>
		</record>

		<record model="res.groups" id="ka_logistik_rab.group_user">
			<field name="name">User</field>
			<field name="category_id" ref="logistik_rab_category"/>
		</record>

		<record model="res.groups" id="ka_logistik_rab.group_manager">
			<field name="name">Manager</field>
			<field name="category_id" ref="logistik_rab_category"/>
			<field name="implied_ids" eval="[(4, ref('ka_logistik_rab.group_user'))]"/>
		</record>
	</data>


	<data>
    	<record id="logistik_rab_comp_rule" model="ir.rule">
    	    <field name="name" >RAB multi-company</field>
    	    <field name="model_id" ref="model_logistik_rab"/>
    	    <field name="global" eval="True"/>
    	    <field name="domain_force"> ['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False), ('stasiun_id','child_of', [s.id for s in user.stasiun_ids])]</field>
	    </record>

    	<record id="logistik_rab_lines_comp_rule" model="ir.rule">
    	    <field name="name" >RAB lines multi-company</field>
    	    <field name="model_id" ref="model_logistik_rab_lines"/>
    	    <field name="global" eval="True"/>
    	    <field name="domain_force"> ['|',('company_id','child_of',[user.company_id.id]),('company_id','=',False)]</field>
	    </record>
	</data>	
</odoo>
