<odoo>
    <record id="view_ka_company_form" model="ir.ui.view">
        <field name="name">ka_base.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="code"/>
            </field>
            <field name="partner_id" position="replace"/>
            <xpath expr="//notebook" position="inside">
                <page string="Setting R/K" groups="base.group_no_one">
                    <group>
                        <field name="intercompany_user_id" readonly="1" required="0"/>
                        <field name="partner_id" readonly="1" required="0"/>
                        <field name="internal_user_id" required="0"/>
                    </group>
                </page>	
            </xpath>
        </field> 	
    
    </record>
</odoo>