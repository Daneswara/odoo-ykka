<odoo>
	<data>
		<record model="ir.ui.view" id="view_employee_attendance_form_inherit">
			<field name="name">SDM Presensi Pegawai Form</field>
			<field name="model">hr.attendance</field>
			<field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='check_out']" position="after">
					<field name="date_in"/>
					<field name="is_telat"/>
					<field name="is_pulang_cepat"/>
				</xpath>
			</field>
		</record>

		<record model="ir.ui.view" id="view_employee_attendance_tree">
			<field name="name">hr.attendance.employee.tree</field>
			<field name="model">hr.attendance</field>
			<field name="arch" type="xml">
				<tree create="false" edit="false">
					<field name="employee_id"/>
					<field name="date_in"/>
					<field name="check_in"/>
					<field name="check_out"/>
					<field name="is_telat"/>
					<field name="is_pulang_cepat"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_employee_attendance_search">
			<field name="name">hr.attendance.employee.search</field>
			<field name="model">hr.attendance</field>
			<field name="arch" type="xml">
				<search>
					<field name="date_in"/>
					<field name="check_in"/>
					<field name="check_out"/>
					<filter name="current_month" string="Bulan Ini" domain="[('check_in', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]" />
					<group string="Status Masuk Pulang">
						<filter name="masuk_telat" string="Masuk Telat" domain="[('is_telat', '=', True)]"/>
						<filter name="pulang_cepat" string="Pulang Cepat" domain="[('is_pulang_cepat', '=', True)]"/>
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_view_attendance_employee">
			<field name="name">Data Presensi Karyawan</field>
			<field name="res_model">hr.attendance</field>
			<field name="view_id" ref="view_employee_attendance_tree"/>
			<field name="search_view_id" ref="view_employee_attendance_search"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
		</record>
	</data>
</odoo>