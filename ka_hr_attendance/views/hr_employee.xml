<odoo>
	<data>
		<record model="ir.ui.view" id="view_attendance_employee_form_inherit">
			<field name="name">hr.attendance.employee.form.inherit</field>
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="ka_hr_holidays.view_holidays_employee_form_inherit"/>
			<field name="arch" type="xml">
				<field name="npwp" position="after">
					<field name="finger_id"/>
					<field name="hr_attendance_group_id" domain="[('company_id', '=', company_id)]"/>
				</field>

				<xpath expr="//button[@name='action_view_sp']" position="before">
					<button class="oe_stat_button" type="object" name="action_view_attendance" string="Kehadiran" icon="fa-list"/>
				</xpath>
			</field>
		</record>
	</data>
</odoo>