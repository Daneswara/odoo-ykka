<odoo>
	<data>
		<record model="ir.ui.view" id="view_group_tree">
			<field name="name">Data Presensi Grup Tree</field>
			<field name="model">hr.attendance.group</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_group_form">
			<field name="name">Data Presensi Grup Form</field>
			<field name="model">hr.attendance.group</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name"/>
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
						<notebook>
							<page string="Data Group Shift">
								<field name="group_shift_ids">
									<tree editable="bottom">
										<field name="date_start"/>
										<field name="date_end"/>
										<field name="shift_id"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_group_search">
			<field name="name">Data Presensi Grup Search</field>
			<field name="model">hr.attendance.group</field>
			<field name="arch" type="xml">
				<search>
					<field name="name"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_view_group">
			<field name="name">Data Grup Shift Presensi</field>
			<field name="res_model">hr.attendance.group</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input Grup Shift Pegawai</p>
			</field>
		</record>

		<menuitem action="action_view_group" id="menu_view_group" parent="hr_attendance.menu_hr_attendance_settings" groups="hr_attendance.group_hr_attendance_manager" sequence="2"/>
	</data>
</odoo>