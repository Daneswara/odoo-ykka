<odoo>
	<data>
		<record model="ir.ui.view" id="view_report_weekly_tree">
			<field name="name">ka_hr_attendance.report.weekly.tree</field>
			<field name="model">ka_hr_attendance.report.weekly</field>
			<field name="arch" type="xml">
				<tree>
					<field name="tgl_awal"/>
					<field name="company_id" groups="base.group_multi_company"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_report_weekly_form">
			<field name="name">ka_hr_attendance.report.weekly.form</field>
			<field name="model">ka_hr_attendance.report.weekly</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="get_default_pdf" type="object" class="oe_highlight" string="PDF Report"/>
						<button name="send_mail_report" type="object" string="Kirim e-mail semua Karyawan"/>
					</header>
					<sheet>
						<group>
							<field name="tgl_awal"/>
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_report_weekly_search">
			<field name="name">ka_hr_attendance.report.weekly.search</field>
			<field name="model">ka_hr_attendance.report.weekly</field>
			<field name="arch" type="xml">
				<search>
					<field name="tgl_awal"/>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_view_report_weekly">
			<field name="name">Laporan Presensi Mingguan</field>
			<field name="res_model">ka_hr_attendance.report.weekly</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Input Laporan Presensi Mingguan</p>
			</field>
		</record>

		<menuitem action="action_view_report_weekly" id="menu_wizard_ka_hr_attendance_weekly_report" parent="hr_attendance.menu_hr_attendance_report" sequence="1"/>
	</data>
</odoo>