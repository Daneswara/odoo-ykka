<odoo>
	<data>
		<report id="monthly_report"
			model="ka_hr_attendance.monthly.report.wizard"
			string="Laporan Rekap Presensi Bulanan Pegawai"
			report_type="qweb-pdf"
			name="ka_hr_attendance.monthly_report_view"
			file="ka_hr_attendance.monthly_report"
			menu="False"/>

		<record model="report.paperformat" id="paperformat_monthly_report">
			<field name="name">Laporan Rekap Presensi Bulanan Pegawai</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="page_width">0</field>
			<field name="page_width">0</field>
			<field name="orientation">Landscape</field>
			<field name="margin_top">30</field>
			<field name="margin_right">5</field>
			<field name="margin_bottom">10</field>
			<field name="margin_left">5</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">20</field>
			<field name="dpi">90</field> 
		</record>

		<record id="ka_hr_attendance.monthly_report" model="ir.actions.report.xml">
			<field name="paperformat_id" ref="ka_hr_attendance.paperformat_monthly_report"/>
		</record>

		<template id="monthly_report_view">
			<div class="header" style="border-bottom: 2px solid black">
				<h4 class="text-center"><b>REKAPITULASI PRESENSI KARYAWAN STAF BULANAN</b></h4>
				<h5 class="text-center">BULAN: <strong><span t-esc="monthname"/> <span t-esc="year"/></strong></h5>
				<h5 class="text-center">Jumlah: <strong><span t-esc="day_count"/></strong> hari</h5>
			</div>

			<div class="page" style="font-family:'Arial'">
				<style type="text/css">
					@media print {
						thead {
							display: table-header-group !important;
						}
					}

					th, td {
						vertical-align: middle !important;
					}

					.table-bordered > thead > tr > th,
					.table-bordered > tbody > tr > td {
						border: 1px solid #000 !important;
					}
				</style>

				<table class="table table-condensed table-bordered" style="width: 100%; font-size: 11px">
					<thead>
						<tr>
							<th class="text-center" style="width: 3%">No.</th>
							<th class="text-center" style="width: 17%">Nama</th>
							<th class="text-center" style="width: 5%">Masuk</th>
							<th class="text-center" style="width: 5%">Terlambat</th>
							<th class="text-center" style="width: 5%">Pulang Cepat</th>
							<th class="text-center" style="width: 5%">Tdk Abs Masuk</th>
							<th class="text-center" style="width: 5%">Tdk Abs Keluar</th>
							<th class="text-center" style="width: 5%">Cuti</th>
							<th class="text-center" style="width: 5%">Ijin</th>
							<th class="text-center" style="width: 5%">Dinas</th>
							<th class="text-center" style="width: 5%">Sakit</th>
							<th class="text-center" style="width: 5%">Tidak Absen</th>
							<th class="text-center" style="width: 12%">TTD</th>
							<th class="text-center" style="width: 18%">Keterangan</th>
						</tr>
					</thead>
					<tbody>
						<t t-foreach="docs" t-as="doc">
							<tr style="height: 30px;">
								<td class="text-center"><span t-esc="doc_index+1"/></td>
								<td><span t-esc="doc['employee_name']"/></td>
								<td class="text-center"><span t-esc="doc['attendance']"/></td>
								<td class="text-center"><span t-esc="doc['is_telat']"/></td>
								<td class="text-center"><span t-esc="doc['is_pulang_cepat']"/></td>
								<td class="text-center"><span t-esc="doc['no_check_in']"/></td>
								<td class="text-center"><span t-esc="doc['no_check_out']"/></td>
								<td class="text-center"><span t-esc="doc['cuti']"/></td>
								<td class="text-center"><span t-esc="doc['ijin']"/></td>
								<td class="text-center"><span t-esc="doc['dinas']"/></td>
								<td class="text-center"><span t-esc="doc['sakit']"/></td>
								<td class="text-center"><span t-esc="doc['mangkir']"/></td>
								<td></td>
								<td></td>
							</tr>
						</t>
					</tbody>
				</table>

				<div class="row">
					<div class="col-xs-3 col-xs-offset-9 text-center">
						<span>Kadiv. SDM</span>
						<br/>
						<br/>
						<br/>
						<br/>
						<span t-esc="kadiv_sdm"/>
					</div>
				</div>
			</div>

			<div class="footer">
				<div class="row text-center" style="border-top: 1px solid black;">
					<div class="col-xs-3 col-xs-offset-9 text-right">
						<ul class="list-inline" style="margin-top:10px;">
							<li>Hal:</li>
							<li><span class="page"/></li>
							<li>/</li>
							<li><span class="topage"/></li>
						</ul>
					</div>
				</div>
			</div>
		</template>
	</data>
</odoo>