<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	<!-- form Stasiun -->
		<record model="ir.ui.view" id="view_analytic_stasiun_users" >
			<field name="name">analytic.account.stasiun.users</field>
			<field name="model">res.users</field>
			<field name="inherit_id" ref="base.view_users_form"/>
			<field name="arch" type="xml">
				<field name="partner_id" position="before">
					<field name="stasiun_ids" string="Stasiun" widget="many2many_tags"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="view_account_analytic_filter">
			<field name="name">account.analytic.stasiun.filter</field>
			<field name="model">account.analytic.stasiun</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Pencarian">
					<field name="code" string="Kode"/>
					<field name="name" string="Nama"/>
					<field name="department_id" string="Bagian"/>
				</search>
			</field>
		</record>
		
		<!--Stasiun analytic form view -->
		<record id="view_account_analytic_stasiun_form" model="ir.ui.view">
			<field name="name">account.analytic.stasiun.form</field>
			<field name="model">account.analytic.stasiun</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<!-- <field name="company_id" widget="selection" groups="base.group_multi_company" attrs="{'required': [('type','&lt;&gt;','view')]}" style="width: 50%%"/> -->
							<field name="company_id" widget="selection" groups="base.group_multi_company" style="width: 50%%"/>
							<field name="operating_unit_id" widget="selection" groups="base.group_multi_company" style="width: 50%%"/>
							<field name="code" string="Kode" style="width: 25%%"/>
							<field name="name" string="Nama Stasiun"/>
							<field name="analytic_type" string="Jenis" invisible="context.get('default_analytic_type', False)"/>
							<field name="parent_id" domain="[('company_id', '=', company_id), ('analytic_type', '=', 'view')]" string="Induk"/>
							<field name="is_stasiun" invisible="1"/>
							<field name="department_id" domain="[('company_id', '=', company_id)]"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_account_analytic_stasiun_tree" model="ir.ui.view">
			<field name="name">account.analytic.stasiun.tree</field>
			<field name="model">account.analytic.stasiun</field>
			<field name="field_parent">child_complete_ids</field>
			<field name="view_type">tree</field>
			<field name="arch" type="xml">
				<!-- <tree colors="blue:state=='pending';grey:state in ('close','cancelled');blue:type=='view'" string="Analytic account" toolbar="1"> -->
				<tree>
					<field name="code" string="Kode"/>
					<!-- <field name="name" invisible="1"/> -->
					<field name="complete_name" string="Stasiun"/>
					<field name="department_id"/>
					<field name="balance"/>
					<!-- <field name="state" invisible="1"/> -->
					<field name="currency_id" groups="base.group_multi_currency"/>
					<!-- <field name="date" invisible="1"/> -->
					<!-- <field name="user_id" invisible="1"/> -->
					<field name="partner_id" invisible="1"/>
					<field name="parent_id" invisible="1"/>
					<field name="analytic_type" string="Jenis"/>
					<field name="company_id" groups="base.group_multi_company"/>
					<!-- <field name="template_id" invisible="1"/> -->
				</tree>
			</field>
		</record>

		<record id="action_account_analytic_stasiun_form" model="ir.actions.act_window">
			<field name="name">Stasiun</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.analytic.stasiun</field>
			<field name="context">{}</field> <!-- repair invalid context by setting empty one -->
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_account_analytic_stasiun_tree"/>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Data masih kosong, input data terlebih dahulu!</p>
			</field>
		</record>

		<menuitem action="action_account_analytic_stasiun_form" id="menu_account_analytic_stasiun"
			parent="ka_logistik_master.menu_base_stasiun_root"/>
	
	</data>
</odoo>
